                                    </svg>
                                </div>
                                <h3 class="text-base font-semibold text-gray-900">{{ category.name }}</h3>
                            </div>
                            <div class="text-sm text-gray-500">{{ activeChildren|length }} alt kategori</div>
                        </div>

                        {% if activeChildren|length > 0 %}
                            {% set perCol = (activeChildren|length / 3)|round(0, 'ceil') %}
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
                                {% for col in 0..2 %}
                                    {% set start = col * perCol %}
                                    {% set list = activeChildren|slice(start, perCol) %}
                                    <ul class="space-y-2">
                                        {% for child in list %}
                                            <li>
                                                <a href="{{ path('public_products', {category: child.id}) }}" class="text-sm text-gray-700 hover:text-gray-900">
                                                    {{ child.name }}
                                                </a>
                                                {% set gcCount = child.children|length %}
                                                {% if gcCount > 0 %}
                                                    <span class="text-xs text-gray-400">({{ gcCount }})</span>
                                                {% endif %}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="p-6 text-sm text-gray-500">Alt kategori bulunmuyor</div>
