/* Product Gallery Styles */
.main-image-container {
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 16px;
  height: 400px;
  background: #f9fafb;
}

.main-product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  cursor: zoom-in;
  transition: transform 0.3s ease;
}

.main-product-image:hover {
  transform: scale(1.02);
}

.no-image-placeholder {
  width: 100%;
  height: 100%;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-image-icon {
  width: 96px;
  height: 96px;
  color: #9ca3af;
}

.thumbnail-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12px;
}

.thumbnail-container {
  border-radius: 6px;
  overflow: hidden;
  aspect-ratio: 1;
  background: #f9fafb;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.thumbnail-image:hover {
  opacity: 0.75;
}

.videos-section {
  margin-top: 24px;
}

.videos-title {
  font-size: 16px;
  font-weight: 600;
  color: #111827;
  margin-bottom: 12px;
}

.videos-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 16px;
}

.video-container {
  background: #000;
  border-radius: 8px;
  overflow: hidden;
}

.video-player {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.video-title {
  padding: 12px;
  font-size: 12px;
  color: #6b7280;
  background: #f9fafb;
  border-top: 1px solid #e5e7eb;
}

/* Responsive Gallery */
