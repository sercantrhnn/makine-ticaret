{% extends 'public/base.html.twig' %}

{% block title %}{{ product|smart_translate('name', app.request.locale) }} | Makine Ticaret{% endblock %}
{% block description %}{% set desc = product|smart_translate('description', app.request.locale) %}{{ desc|slice(0, 160) }}{% if desc|length > 160 %}...{% endif %}{% endblock %}

{% block header %}
<header style="position:sticky;top:0;z-index:60;background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between;color:#fff;">
    <a href="{{ path('public_home') }}" style="display:flex;align-items:center;text-decoration:none;color:#fff;">
      <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:44px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
    </a>
    <nav style="display:flex;gap:22px;align-items:center;">
      <a href="{{ path('public_products') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">{{ 'Ürünler'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">{{ 'Firmalar'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">{{ 'Kategoriler'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">{{ 'İhaleler'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('purchase_request_new') }}" style="color:#111111;background:#C0C0C0;text-decoration:none;font-size:13px;font-weight:700;padding:6px 10px;border-radius:8px;">{{ 'Alım Talebi Oluştur'|auto_translate(app.request.locale) }}</a>
      {% if app.user %}
        <div style="position:relative;" id="userMenuRoot">
          <button id="userMenuButton" style="display:flex;align-items:center;gap:8px;background:transparent;border:0;color:#e5e5e5;cursor:pointer;font-size:14px;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span>{{ (app.user.name ~ ' ' ~ app.user.surname)|trim ?: (app.user.username ?? app.user.email) }}</span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </button>
          <div id="userMenuDropdown" style="display:none;position:absolute;right:0;top:calc(100% + 8px);background:#111214;border:1px solid #222428;border-radius:8px;min-width:180px;box-shadow:0 8px 24px rgba(0,0,0,.35);">
            <a href="{{ path('user_messages_inbox') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16v16H4z" fill="none"/><path d="M22 6l-10 7L2 6"/></svg>
              <span>{{ 'Mesajlarım'|auto_translate(app.request.locale) }}</span>
            </a>
            <a href="{{ path('purchase_request_new') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>
              <span>{{ 'Alım Talebi Oluştur'|auto_translate(app.request.locale) }}</span>
            </a>
            {% if 'ROLE_SUBSCRIBER' in app.user.roles %}
            <a href="{{ path('admin_dashboard') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;border-top:1px solid #1e2024;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
              <span>{{ 'İhale Oluştur'|auto_translate(app.request.locale) }}</span>
            </a>
            {% endif %}
            <a href="{{ path('app_logout') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#ff7b7b;text-decoration:none;font-size:14px;border-bottom-left-radius:8px;border-bottom-right-radius:8px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><path d="M10 17l5-5-5-5"/><path d="M15 12H3"/></svg>
              <span>{{ 'Çıkış Yap'|auto_translate(app.request.locale) }}</span>
            </a>
          </div>
        </div>
        <script>
          (function(){
            var btn = document.getElementById('userMenuButton');
            var dd = document.getElementById('userMenuDropdown');
            var root = document.getElementById('userMenuRoot');
            if (!btn || !dd || !root) return;
            btn.addEventListener('click', function(e){ e.stopPropagation(); dd.style.display = dd.style.display === 'none' || dd.style.display === '' ? 'block' : 'none'; });
            document.addEventListener('click', function(e){ if (!root.contains(e.target)) { dd.style.display = 'none'; } });
          })();
        </script>
      {% else %}
        <a href="{{ path('app_login') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">{{ 'Giriş Yap'|auto_translate(app.request.locale) }}</a>
        <a href="{{ path('app_register') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">{{ 'Kayıt Ol'|auto_translate(app.request.locale) }}</a>
      {% endif %}

      <!-- Language Switcher -->
      <div style="margin-left:10px;">
        {% include 'components/language-switcher-dark.html.twig' %}
      </div>
    </nav>
  </div>
</header>
{% endblock %}
{% block body %}
<!-- Breadcrumb -->
<section class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4" style="max-width:80%;padding-left:16px;padding-right:16px;">
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li>
                    <a href="{{ path('public_home') }}" class="hover:text-primary-600">{{ 'Ana Sayfa'|auto_translate(app.request.locale) }}</a>
                </li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <a href="{{ path('public_products') }}" class="hover:text-primary-600">{{ 'Ürünler'|auto_translate(app.request.locale) }}</a>
                </li>
                {% if product.category %}
                    <li class="flex items-center">
                        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <a href="{{ path('public_products', {category: product.category.id}) }}" class="hover:text-primary-600">{{ product.category|smart_translate('name', app.request.locale) }}</a>
                    </li>
                {% endif %}
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="text-gray-900">{{ product|smart_translate('name', app.request.locale) }}</span>
                </li>
            </ol>
        </nav>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
    <div class="lg:grid lg:grid-cols-2 lg:gap-x-8">

        <!-- Product Images -->
        <div class="lg:max-w-lg lg:self-start">
            {% set imageUrls = [] %}
            {% for img in product.images %}
                {% set imageUrls = imageUrls|merge([asset(img.imagePath)]) %}
            {% endfor %}
            <div id="product-gallery" data-images='{{ imageUrls|json_encode|e('html_attr') }}'></div>

            <div class="rounded-lg overflow-hidden mb-4" style="height:520px;">
                {% if product.images|length > 0 %}
                    <img src="{{ asset(product.images.first.imagePath) }}"
                         alt="{{ product|smart_translate('name', app.request.locale) }}"
                         class="w-full h-full object-cover cursor-zoom-in"
                         data-index="0"
                         id="mainProductImage">
                {% else %}
                    <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                        <svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                {% endif %}
            </div>

            <!-- Additional Images -->
            {% if product.images|length > 1 %}
                <div class="grid grid-cols-4 gap-3">
                    {% for image in product.images|slice(1) %}
                        <div class="aspect-w-1 aspect-h-1 rounded-md overflow-hidden">
                            <img src="{{ asset(image.imagePath) }}"
                                 alt="{{ product|smart_translate('name', app.request.locale) }}"
                                 class="w-full h-24 object-cover hover:opacity-75 cursor-pointer"
                                 data-index="{{ loop.index }}">
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {% if product.videos|length > 0 %}
                <div class="mt-6">
                    <h2 class="text-base font-semibold text-gray-900 mb-3">{{ 'Ürün Videoları'|auto_translate(app.request.locale) }}</h2>
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                        {% for video in product.videos %}
                            <div class="bg-black rounded-lg overflow-hidden">
                                <video controls preload="metadata" class="w-full" style="height:180px;object-fit:cover;">
                                    <source src="/{{ video.videoPath }}" type="video/mp4">
                                    Tarayıcınız video oynatmayı desteklemiyor.
                                </video>
                                {% if video.title %}
                                    <div class="px-3 py-2 text-xs text-gray-600 bg-gray-50 border-t border-gray-100">{{ video.title }}</div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <!-- Product Info -->
        <div class="mt-8 lg:mt-0">
            <!-- Status Badges -->
            <div class="flex items-center gap-2 mb-4">
                <span class="px-3 py-1 text-sm font-medium rounded-full {% if product.productStatus == 'satilik' %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                    {{ product.productStatus == 'satilik' ? ('Satılık'|auto_translate(app.request.locale)) : ('Kiralık'|auto_translate(app.request.locale)) }}
                </span>
                {% if product.productType %}
                    <span class="px-3 py-1 text-sm font-medium rounded-full {% if product.productType == 'sifir' %}bg-yellow-100 text-yellow-800{% else %}bg-orange-100 text-orange-800{% endif %}">
                        {{ product.productType == 'sifir' ? ('Sıfır'|auto_translate(app.request.locale)) : ('İkinci El'|auto_translate(app.request.locale)) }}
                    </span>
                {% endif %}
            </div>

            <h1 class="text-3xl font-bold text-gray-900 mb-4">{{ product|smart_translate('name', app.request.locale) }}</h1>

            <!-- Price -->
            <div class="mb-6">
                {% if product.price and product.currency %}
                    {% set currencySymbols = {'TRY':'₺','USD':'$','EUR':'€','GBP':'£'} %}
                    <div class="inline-flex items-baseline px-4 py-2 rounded-lg bg-gray-50 border border-gray-200">
                        <span class="text-2xl font-extrabold text-gray-900 mr-2">{{ currencySymbols[product.currency]|default(product.currency) }}</span>
                        <span class="text-2xl font-extrabold text-gray-900">{{ product.price|number_format(2, ',', '.') }}</span>
                    </div>
                {% else %}
                    <div class="text-gray-600">{{ 'Fiyat için iletişime geçin'|auto_translate(app.request.locale) }}</div>
                {% endif %}
            </div>

            <!-- Company Info -->
            {% if product.company %}
                <div class="flex items-center mb-6 p-4 bg-gray-50 rounded-lg">
                    {% if product.company.logoPath %}
                        <img src="{{ asset(product.company.logoPath) }}"
                             alt="{{ product.company.name }}"
                             class="w-12 h-12 rounded-lg object-cover mr-4">
                    {% else %}
                        <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
                            <span class="text-lg font-bold text-primary-600">
                                {{ product.company.name|slice(0,1)|upper }}
                            </span>
                        </div>
                    {% endif %}
                    <div class="flex-1">
                        <h3 class="text-lg font-semibold text-gray-900">
                            <a href="{{ path('public_company_detail', {id: product.company.id}) }}"
                               class="hover:text-primary-600 transition-colors">
                                {{ product.company.name }}
                            </a>
                        </h3>
                        {% if product.company.activityType %}
                            <p class="text-gray-600">{{ product.company.activityType }}</p>
                        {% endif %}
                    </div>
                    <a href="{{ path('public_company_detail', {id: product.company.id}) }}"
                       class="inline-flex items-center px-4 py-2 border border-primary-600 text-primary-600 font-medium rounded-lg hover:bg-primary-50 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        {{'Firmayı Görüntüle'|auto_translate(app.request.locale)}}
                    </a>
                </div>
            {% endif %}

            <!-- Product Specifications -->
            <div class="mb-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">{{ 'Ürün Özellikleri'|auto_translate(app.request.locale) }}</h2>
                <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                    <dl class="divide-y divide-gray-200">
                        {% if product.brand %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{ 'Marka'|auto_translate(app.request.locale) }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ product.brand }}</dd>
                            </div>
                        {% endif %}

                        {% if product.modelType %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{ 'Model'|auto_translate(app.request.locale) }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ product.modelType }}</dd>
                            </div>
                        {% endif %}

                        {% if product.listingNo %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{'İlan No'|auto_translate(app.request.locale)}}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ product.listingNo }}</dd>
                            </div>
                        {% endif %}

                        {% if product.type %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{ 'Tip'|auto_translate(app.request.locale) }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ product.type }}</dd>
                            </div>
                        {% endif %}

                        {% if product.origin %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{ 'Menşei'|auto_translate(app.request.locale) }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ product.origin }}</dd>
                            </div>
                        {% endif %}

                        {% if product.category %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{ 'Kategori'|auto_translate(app.request.locale) }}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <a href="{{ path('public_products', {category: product.category.id}) }}"
                                       class="text-primary-600 hover:text-primary-700">
                                        {{ product.category|smart_translate('name', app.request.locale) }}
                                    </a>
                                </dd>
                            </div>
                        {% endif %}

                        <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                            <dt class="text-sm font-medium text-gray-500">{{ 'Durum'|auto_translate(app.request.locale) }}</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                <span class="{% if product.productStatus == 'satilik' %}text-green-600{% else %}text-blue-600{% endif %} font-medium">
                                    {{ product.productStatus == 'satilik' ? ('Satılık'|auto_translate(app.request.locale)) : ('Kiralık'|auto_translate(app.request.locale)) }}
                                </span>
                            </dd>
                        </div>

                        {% if product.productType %}
                            <div class="px-4 py-3 sm:grid sm:grid-cols-3 sm:gap-4">
                                <dt class="text-sm font-medium text-gray-500">{{'Ürün Türü'|auto_translate(app.request.locale)}}</dt>
                                <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                                    <span class="{% if product.productType == 'sifir' %}text-yellow-600{% else %}text-orange-600{% endif %} font-medium">
                                        {{ product.productType == 'sifir' ? ('Sıfır'|auto_translate(app.request.locale)) : ('İkinci El'|auto_translate(app.request.locale)) }}
                                    </span>
                                </dd>
                            </div>
                        {% endif %}
                    </dl>
                </div>
            </div>

            <!-- Description -->
            {% if product.description %}
                <div class="mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">{{ 'Açıklama'|auto_translate(app.request.locale) }}</h2>
                    <div class="prose prose-gray max-w-none">
                        <p class="text-gray-700 leading-relaxed">{{ (product|smart_translate('description', app.request.locale))|nl2br }}</p>
                    </div>
                </div>
            {% endif %}

            <!-- Detailed Description -->
            {% if product.detail %}
                <div class="mb-8">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Detaylı Bilgi</h2>
                    <div class="prose prose-gray max-w-none">
                        <p class="text-gray-700 leading-relaxed">{{ product.detail|auto_translate(app.request.locale) }}</p>
                    </div>
                </div>
            {% endif %}


            <!-- Contact Actions -->
            <div class="border-t border-gray-200 pt-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">{{ 'İletişim'|auto_translate(app.request.locale) }}</h2>

                {% if product.company %}
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {% if product.company.phone %}
                            <a href="tel:{{ product.company.phone }}"
                               class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                                {{ 'Telefon'|auto_translate(app.request.locale) }}: {{ product.company.phone }}
                            </a>
                        {% endif %}

                        {% if product.company.email %}
                            <a href="mailto:{{ product.company.email }}"
                               class="inline-flex items-center justify-center px-6 py-3 border border-primary-600 text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                {{ 'E-posta Gönder'|auto_translate(app.request.locale) }}
                            </a>
                        {% endif %}
                    </div>

                    {% if product.company.website %}
                        <div class="mt-4">
                            <a href="{{ product.company.website }}" target="_blank"
                               class="inline-flex items-center text-primary-600 hover:text-primary-700">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                                {{ 'Firma Websitesi' |auto_translate(app.request.locale) }}
                            </a>
                        </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Related Products -->
    {% if product.category %}
        <section class="mt-16 border-t border-gray-200 pt-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">{{ 'Benzer Ürünler' |auto_translate(app.request.locale) }}</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" style="gap:24px;">
                <!-- You can add related products logic here -->
                <div class="text-center py-12 col-span-full">
                    <a href="{{ path('public_products', {category: product.category.id}) }}"
                       class="inline-flex items-center px-6 py-3 border border-primary-600 text-primary-600 font-medium rounded-lg hover:bg-primary-50 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                        </svg>
