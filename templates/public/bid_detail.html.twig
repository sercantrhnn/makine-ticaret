                                </div>
                                {% if bid.product.category %}
                                    <div>
                                        <span class="text-sm text-gray-500">{{ 'Kategori'|auto_translate(app.request.locale) }}:</span>
                                        <p class="font-semibold text-gray-900">{{ bid.product.category|smart_translate('name', app.request.locale) }}</p>
                                    </div>
                                {% endif %}
                                <div>
