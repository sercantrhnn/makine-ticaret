                                                <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4m-6 0L1 13l8-8 6 6"/>
                                            </svg>
                                            {{ 'gallery.click_to_enlarge'|trans }}
                                        </span>
                                        {% if bid.product.images|length > 1 %}
                                            <span class="flex items-center gap-1">
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                    <polyline points="9,18 15,12 9,6"/>
                                                </svg>
                                                {{ 'gallery.navigate_with_arrows'|trans }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Bid Description -->
                    {% if bid.description %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span class="font-semibold">{{ 'İhale Açıklaması'|auto_translate(app.request.locale) }}</span>
                                </div>
                            </div>

                            <div class="p-6">
                                <div class="prose prose-gray max-w-none">
                                    {{ bid.description|nl2br }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <!-- Bid Summary -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6 sticky top-6 border border-gray-100">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                            <h3 class="text-lg font-semibold">{{ 'İhale Özeti'|auto_translate(app.request.locale) }}</h3>
                        </div>

                        <div class="p-6">
                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-sm text-gray-500 block mb-1">{{ 'Başlangıç Fiyatı'|auto_translate(app.request.locale) }}</span>
                                <span class="text-3xl font-bold text-gray-900">₺{{ bid.startingPrice|number_format }}</span>
                            </div>

                            {% if app.user %}
                              {% if bid.company.owner is defined and app.user and bid.company.owner == app.user %}
                                <div class="mb-6">
                                  <div class="text-sm text-gray-600">{{ 'Kendi ihalenize teklif veremezsiniz.'|auto_translate(app.request.locale) }}</div>
                                </div>
                              {% else %}
                                <div class="mb-6">
                                  <a href="{{ path('public_bid_offer', {id: bid.id}) }}" class="inline-flex items-center justify-center w-full px-4 py-3 text-sm font-medium rounded-lg" style="background:#0a0a0a;color:#ffffff;">
                                    {{ 'Teklif Ver'|auto_translate(app.request.locale) }}
                                  </a>
                                </div>
                              {% endif %}
                            {% else %}
                              <div class="mb-6">
                                <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center w-full px-4 py-3 text-sm font-medium rounded-lg border border-gray-300 bg-white text-gray-800 hover:bg-gray-50">
                                  {{ 'Giriş yaparak teklif verin'|auto_translate(app.request.locale) }}
                                </a>
                              </div>
                            {% endif %}

                            <!-- Time Info -->
                            <div class="space-y-4 mb-6">
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">{{ 'Başlangıç Tarihi'|auto_translate(app.request.locale) }}:</span>
                                    <span class="font-semibold text-gray-900">{{ bid.createdAt|date('d.m.Y') }}</span>
                                </div>
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">{{ 'Bitiş Tarihi'|auto_translate(app.request.locale) }}:</span>
                                    {% set now = date() %}
                                    {% set endTime = bid.endTime %}
                                    {% if endTime > now %}
                                        <span class="font-semibold text-gray-900">{{ endTime|date('d.m.Y H:i') }}</span>
                                    {% else %}
                                        <span class="font-semibold text-red-600">{{ 'Süresi Dolmuş'|auto_translate(app.request.locale) }}</span>
                                    {% endif %}
                                </div>
                                {% if endTime > now %}
                                    {% set timeLeft = date(endTime).diff(date(now)) %}
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm text-gray-500">{{ 'Kalan Süre'|auto_translate(app.request.locale) }}:</span>
                                        <span class="font-semibold text-gray-900">
                                            {{ timeLeft.days }} {{ 'gün'|auto_translate(app.request.locale) }} {{ timeLeft.h }} {{ 'saat'|auto_translate(app.request.locale) }}
                                        </span>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Status -->
                            {% set now = date() %}
                            {% set endTime = bid.endTime %}
                            {% if endTime > now %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-700 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-gray-800 font-semibold">{{ 'Aktif İhale'|auto_translate(app.request.locale) }}</span>
                                    </div>
                                    <p class="text-gray-600 text-sm mt-1">{{ 'Bu ihale aktif durumdadır.'|auto_translate(app.request.locale) }}</p>
                                </div>
                            {% else %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-gray-800 font-semibold">{{ 'Onaylı İhale'|auto_translate(app.request.locale) }}</span>
                                    </div>
                                    <p class="text-gray-600 text-sm mt-1">{{ 'Bu ihale onaylanmıştır.'|auto_translate(app.request.locale) }}</p>
                                </div>
                            {% endif %}

                            <!-- Company Info -->
                            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                                <h4 class="font-semibold text-gray-900 mb-2">{{ 'İhale Veren Firma'|auto_translate(app.request.locale) }}</h4>
                                <div class="space-y-2">
                                    <p class="text-gray-800 font-medium">{{ bid.company.name }}</p>
                                    {% if bid.company.phone %}
                                        <p class="text-gray-600 text-sm">{{ 'Telefon'|auto_translate(app.request.locale) }}: {{ bid.company.phone }}</p>
                                    {% endif %}
                                    {% if bid.company.email %}
                                        <p class="text-gray-600 text-sm">{{ 'E-posta'|auto_translate(app.request.locale) }}: {{ bid.company.email }}</p>
                                    {% endif %}
                                    {% if bid.company.adress %}
                                        <p class="text-gray-600 text-sm">{{ 'Adres'|auto_translate(app.request.locale) }}: {{ bid.company.adress }}</p>
                                    {% endif %}
                                </div>
                                <div class="mt-3">
                                    <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}"
                                       class="inline-flex items-center px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-black transition-colors">
                                        {{ 'Firma Detayı'|auto_translate(app.request.locale) }}
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Related Products -->
                    {% if bid.company.products|length > 1 %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                                <h3 class="text-lg font-semibold">{{ 'Firmanın Diğer Ürünleri'|auto_translate(app.request.locale) }}</h3>
                            </div>

                            <div class="p-6">
                                <div class="space-y-3">
                                    {% for product in bid.company.products|slice(0, 5) %}
                                        {% if product.id != bid.product.id %}
                                            <div class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                                <div class="flex-1">
                                                    <h4 class="font-medium text-gray-900 text-sm line-clamp-1">{{ product|smart_translate('name', app.request.locale) }}</h4>
                                                    <p class="text-gray-600 text-xs">{{ product.brand }} - {{ product.modelType }}</p>
                                                </div>
                                                <a href="{{ path('public_product_detail', {'id': product.id}) }}"
                                                   class="text-indigo-600 hover:text-indigo-700 transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>

                                {% if bid.company.products|length > 6 %}
                                    <div class="mt-4">
                                        <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}"
                                           class="block text-center text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors">
                                            {{ 'Tüm Ürünleri Gör'|auto_translate(app.request.locale) }} ({{ bid.company.products|length }} {{ 'ürün'|auto_translate(app.request.locale) }})
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

