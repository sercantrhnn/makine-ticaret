                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">{{ 'Teknik Detaylar'|auto_translate(app.request.locale) }}</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product.detail|auto_translate(app.request.locale)|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}

                                {% if bid.product.description %}
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">{{ 'Açıklama'|auto_translate(app.request.locale) }}</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product|smart_translate('description', app.request.locale)|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Product Images Gallery -->
                            {% if bid.product.images|length > 0 %}
                                <div class="mt-6">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                            <circle cx="8.5" cy="8.5" r="1.5"/>
                                            <polyline points="21,15 16,10 5,21"/>
                                        </svg>
                                        {{ 'gallery.product_images'|trans }}
                                        <span class="text-sm font-normal text-gray-500">({{ bid.product.images|length }})</span>
                                    </h3>
                                    
                                    {% if bid.product.images|length == 1 %}
                                        <!-- Single Image -->
                                        <div class="rounded-xl overflow-hidden shadow-lg group cursor-pointer bg-gray-100" style="height: 400px;">
                                            <img src="{{ asset(bid.product.images.first.imagePath) }}"
                                                 alt="{{ bid.product.name }}"
                                                 class="gallery-image w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                                        </div>
                                    {% else %}
                                        <!-- Multiple Images Grid -->
                                        <div class="image-gallery-grid">
                                            {% set displayImages = bid.product.images|length > 5 ? bid.product.images|slice(0, 5) : bid.product.images %}
                                            {% for image in displayImages %}
                                                {% set isLarge = loop.first and bid.product.images|length > 2 %}
                                                <div class="gallery-item {{ isLarge ? 'gallery-item-large' : 'gallery-item-small' }} group cursor-pointer">
                                                    <img src="{{ asset(image.imagePath) }}"
                                                         alt="{{ bid.product.name }} - {{ 'gallery.image'|trans }} {{ loop.index }}"
                                                         class="gallery-image w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                                                    
                                                    <!-- Hover Overlay -->
                                                    <div class="gallery-overlay">
                                                        <div class="gallery-overlay-content">
                                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6M7 10h6"/>
                                                            </svg>
                                                            <span class="text-sm font-medium">{{ 'gallery.enlarge'|trans }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                            
                                            {# Show "View All" button if more than 5 images #}
                                            {% if bid.product.images|length > 5 %}
                                                <div class="gallery-item gallery-item-small gallery-view-all group cursor-pointer" data-gallery-trigger="view-all" data-start-index="5">
                                                    <div class="gallery-view-all-content">
                                                        <div class="gallery-view-all-number">+{{ bid.product.images|length - 5 }}</div>
                                                        <div class="gallery-view-all-text">{{ 'gallery.view_more'|trans }}</div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                            
                                            {# Hidden images for lightbox (all remaining images) #}
                                            {% if bid.product.images|length > 5 %}
                                                {% for remainingImage in bid.product.images|slice(5) %}
                                                    <img src="{{ asset(remainingImage.imagePath) }}" 
                                                         alt="{{ bid.product.name }} - {{ 'gallery.image'|trans }} {{ loop.index + 5 }}" 
                                                         class="gallery-image hidden">
                                                {% endfor %}
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                    
                                    <!-- Gallery Info -->
