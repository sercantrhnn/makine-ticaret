{% block stylesheets %}
<style>
/* Image Gallery Styles */
.image-gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 12px;
    max-height: 500px;
}

.gallery-item {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    background: #f3f4f6;
    transition: all 0.3s ease;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.gallery-item:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    transform: translateY(-2px);
}

.gallery-item-large {
    grid-row: span 2;
    grid-column: span 2;
    min-height: 300px;
}

.gallery-item-small {
    min-height: 150px;
}

.gallery-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    backdrop-filter: blur(2px);
    pointer-events: none; /* Allow clicks to pass through to image */
}

.gallery-item:hover .gallery-overlay {
    opacity: 1;
    pointer-events: auto; /* Enable pointer events on hover */
}

.gallery-overlay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: white;
    text-align: center;
}

.gallery-view-all {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.gallery-view-all:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
}

.gallery-view-all-content {
    text-align: center;
    color: white;
}

.gallery-view-all-number {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 4px;
}

.gallery-view-all-text {
    font-size: 0.875rem;
    font-weight: 500;
    opacity: 0.9;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .image-gallery-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 8px;
        max-height: 400px;
    }
    
    .gallery-item-large {
        grid-row: span 1;
        grid-column: span 2;
        min-height: 200px;
    }
    
    .gallery-item-small {
        min-height: 120px;
    }
}

@media (max-width: 480px) {
    .image-gallery-grid {
        grid-template-columns: 1fr 1fr;
    }
    
    .gallery-item-large {
        grid-column: span 2;
        min-height: 180px;
    }
}
</style>
{% endblock %}

{% block header %}
