{% extends 'public/base.html.twig' %}

{% block title %}{{ bid.product.name }} - İhale Detayı - Makine Ticaret{% endblock %}

{% block header %}
<header style="position:sticky;top:0;z-index:60;background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between;color:#fff;">
    <a href="{{ path('public_home') }}" style="display:flex;align-items:center;text-decoration:none;color:#fff;">
      <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:44px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
    </a>
    <nav style="display:flex;gap:22px;align-items:center;">
      <a href="{{ path('public_products') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Ürünler</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Firmalar</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Kategoriler</a>
      <a href="{{ path('public_bids') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">İhaleler</a>
      {% if app.user %}
        <div style="position:relative;" id="userMenuRoot">
          <button id="userMenuButton" style="display:flex;align-items:center;gap:8px;background:transparent;border:0;color:#e5e5e5;cursor:pointer;font-size:14px;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span>{{ (app.user.name ~ ' ' ~ app.user.surname)|trim ?: (app.user.username ?? app.user.email) }}</span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </button>
          <div id="userMenuDropdown" style="display:none;position:absolute;right:0;top:calc(100% + 8px);background:#111214;border:1px solid #222428;border-radius:8px;min-width:180px;box-shadow:0 8px 24px rgba(0,0,0,.35);">
            <a href="{{ path('user_messages_inbox') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16v16H4z" fill="none"/><path d="M22 6l-10 7L2 6"/></svg>
              <span>Mesajlarım</span>
            </a>
            <a href="{{ path('purchase_request_new') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 5v14M5 12h14"/></svg>
              <span>Alım Talebi Oluştur</span>
            </a>
            {% if 'ROLE_SUBSCRIBER' in app.user.roles %}
            <a href="{{ path('admin_dashboard') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#e5e5e5;text-decoration:none;font-size:14px;border-top:1px solid #1e2024;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
              <span>İhale Oluştur</span>
            </a>
            {% endif %}
            <a href="{{ path('app_logout') }}" style="display:flex;align-items:center;gap:8px;padding:10px 12px;color:#ff7b7b;text-decoration:none;font-size:14px;border-bottom-left-radius:8px;border-bottom-right-radius:8px;">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><path d="M10 17l5-5-5-5"/><path d="M15 12H3"/></svg>
              <span>Çıkış Yap</span>
            </a>
          </div>
        </div>
        <script>
          (function(){
            var btn = document.getElementById('userMenuButton');
            var dd = document.getElementById('userMenuDropdown');
            var root = document.getElementById('userMenuRoot');
            if (!btn || !dd || !root) return;
            btn.addEventListener('click', function(e){
              e.stopPropagation();
              dd.style.display = (dd.style.display === 'none' || dd.style.display === '') ? 'block' : 'none';
            });
            document.addEventListener('click', function(e){ if (!root.contains(e.target)) dd.style.display = 'none'; });
          })();
        </script>
      {% else %}
        <a href="{{ path('app_login') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Giriş Yap</a>
        <a href="{{ path('app_register') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">Kayıt Ol</a>
      {% endif %}
    </nav>
  </div>
</header>
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Breadcrumb -->
    <section class="bg-white border-b border-gray-200 py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-4">
                    <li>
                        <a href="{{ path('public_home') }}" class="text-gray-500 hover:text-gray-700 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('public_bids') }}" class="ml-4 text-gray-500 hover:text-gray-700 transition-colors">İhaleler</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-4 text-gray-900 font-medium">İhale Detayı</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Main Content -->
                <div class="lg:col-span-2">
                    <!-- Bid Header -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span class="font-semibold">İhale #{{ bid.id }}</span>
                                </div>
                                {% set now = date() %}
                                {% set endTime = bid.endTime %}
                                {% if endTime > now %}
                                    <span class="bg-gray-700 bg-opacity-90 px-3 py-1 rounded-full text-sm font-medium">
                                        Aktif İhale
                                    </span>
                                {% else %}
                                    <span class="bg-gray-600 bg-opacity-90 px-3 py-1 rounded-full text-sm font-medium">
                                        Onaylı İhale
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="p-6">
                            <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">{{ bid.product.name }}</h1>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                                <div>
                                    <span class="text-sm text-gray-500">Marka & Model:</span>
                                    <p class="font-semibold text-gray-900">{{ bid.product.brand }} - {{ bid.product.modelType }}</p>
                                </div>
                                {% if bid.product.category %}
                                    <div>
                                        <span class="text-sm text-gray-500">Kategori:</span>
                                        <p class="font-semibold text-gray-900">{{ bid.product.category.name }}</p>
                                    </div>
                                {% endif %}
                                <div>
                                    <span class="text-sm text-gray-500">İhale Veren Firma:</span>
                                    <p class="font-semibold text-gray-900">
                                        <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}" class="text-indigo-600 hover:text-indigo-700 transition-colors">
                                            {{ bid.company.name }}
                                        </a>
                                    </p>
                                </div>
                                <div>
                                    <span class="text-sm text-gray-500">İhale Tarihi:</span>
                                    <p class="font-semibold text-gray-900">{{ bid.createdAt|date('d.m.Y H:i') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                            <div class="flex items-center">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                </svg>
                                <span class="font-semibold">Ürün Detayları</span>
                            </div>
                        </div>

                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                {% if bid.product.detail %}
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Teknik Detaylar</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product.detail|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}

                                {% if bid.product.description %}
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Açıklama</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product.description|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Product Images -->
                            {% if bid.product.images|length > 0 %}
                                <div class="mt-6">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-3">Ürün Görselleri</h3>
                                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                                        {% for image in bid.product.images %}
                                            <div class="aspect-square rounded-lg overflow-hidden bg-gray-100">
                                                <img src="{{ asset(image.imagePath) }}"
                                                     alt="{{ bid.product.name }}"
                                                     class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 cursor-pointer">
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Bid Description -->
                    {% if bid.description %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span class="font-semibold">İhale Açıklaması</span>
                                </div>
                            </div>

                            <div class="p-6">
                                <div class="prose prose-gray max-w-none">
                                    {{ bid.description|nl2br }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <!-- Bid Summary -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6 sticky top-6 border border-gray-100">
                        <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                            <h3 class="text-lg font-semibold">İhale Özeti</h3>
                        </div>

                        <div class="p-6">
                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-sm text-gray-500 block mb-1">Başlangıç Fiyatı</span>
                                <span class="text-3xl font-bold text-gray-900">₺{{ bid.startingPrice|number_format }}</span>
                            </div>

                            {% if app.user %}
                              {% if bid.company.owner is defined and app.user and bid.company.owner == app.user %}
                                <div class="mb-6">
                                  <div class="text-sm text-gray-600">Kendi ihalenize teklif veremezsiniz.</div>
                                </div>
                              {% else %}
                                <div class="mb-6">
                                  <a href="{{ path('public_bid_offer', {id: bid.id}) }}" class="inline-flex items-center justify-center w-full px-4 py-3 text-sm font-medium rounded-lg" style="background:#0a0a0a;color:#ffffff;">
                                    Teklif Ver
                                  </a>
                                </div>
                              {% endif %}
                            {% else %}
                              <div class="mb-6">
                                <a href="{{ path('app_login') }}" class="inline-flex items-center justify-center w-full px-4 py-3 text-sm font-medium rounded-lg border border-gray-300 bg-white text-gray-800 hover:bg-gray-50">
                                  Giriş yaparak teklif verin
                                </a>
                              </div>
                            {% endif %}

                            <!-- Time Info -->
                            <div class="space-y-4 mb-6">
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">Başlangıç Tarihi:</span>
                                    <span class="font-semibold text-gray-900">{{ bid.createdAt|date('d.m.Y') }}</span>
                                </div>
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">Bitiş Tarihi:</span>
                                    {% set now = date() %}
                                    {% set endTime = bid.endTime %}
                                    {% if endTime > now %}
                                        <span class="font-semibold text-gray-900">{{ endTime|date('d.m.Y H:i') }}</span>
                                    {% else %}
                                        <span class="font-semibold text-red-600">Süresi Dolmuş</span>
                                    {% endif %}
                                </div>
                                {% if endTime > now %}
                                    {% set timeLeft = date(endTime).diff(date(now)) %}
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm text-gray-500">Kalan Süre:</span>
                                        <span class="font-semibold text-gray-900">
                                            {{ timeLeft.days }} gün {{ timeLeft.h }} saat
                                        </span>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Status -->
                            {% set now = date() %}
                            {% set endTime = bid.endTime %}
                            {% if endTime > now %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-700 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-gray-800 font-semibold">Aktif İhale</span>
                                    </div>
                                    <p class="text-gray-600 text-sm mt-1">Bu ihale aktif durumdadır.</p>
                                </div>
                            {% else %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-gray-800 font-semibold">Onaylı İhale</span>
                                    </div>
                                    <p class="text-gray-600 text-sm mt-1">Bu ihale onaylanmıştır.</p>
                                </div>
                            {% endif %}

                            <!-- Company Info -->
                            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                                <h4 class="font-semibold text-gray-900 mb-2">İhale Veren Firma</h4>
                                <div class="space-y-2">
                                    <p class="text-gray-800 font-medium">{{ bid.company.name }}</p>
                                    {% if bid.company.phone %}
                                        <p class="text-gray-600 text-sm">Telefon: {{ bid.company.phone }}</p>
                                    {% endif %}
                                    {% if bid.company.email %}
                                        <p class="text-gray-600 text-sm">E-posta: {{ bid.company.email }}</p>
                                    {% endif %}
                                    {% if bid.company.adress %}
                                        <p class="text-gray-600 text-sm">Adres: {{ bid.company.adress }}</p>
                                    {% endif %}
                                </div>
                                <div class="mt-3">
                                    <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}"
                                       class="inline-flex items-center px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-lg hover:bg-black transition-colors">
                                        Firma Detayı
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Related Products -->
                    {% if bid.company.products|length > 1 %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-gray-800 to-gray-700 text-white px-6 py-4">
                                <h3 class="text-lg font-semibold">Firmanın Diğer Ürünleri</h3>
                            </div>

                            <div class="p-6">
                                <div class="space-y-3">
                                    {% for product in bid.company.products|slice(0, 5) %}
                                        {% if product.id != bid.product.id %}
                                            <div class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                                <div class="flex-1">
                                                    <h4 class="font-medium text-gray-900 text-sm line-clamp-1">{{ product.name }}</h4>
                                                    <p class="text-gray-600 text-xs">{{ product.brand }} - {{ product.modelType }}</p>
                                                </div>
                                                <a href="{{ path('public_product_detail', {'id': product.id}) }}"
                                                   class="text-indigo-600 hover:text-indigo-700 transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>

                                {% if bid.company.products|length > 6 %}
                                    <div class="mt-4">
                                        <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}"
                                           class="block text-center text-indigo-600 hover:text-indigo-700 text-sm font-medium transition-colors">
                                            Tüm Ürünleri Gör ({{ bid.company.products|length }} ürün)
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block footer %}
<footer style="background:#0a0a0a;color:#bdbdbd;border-top:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:28px 16px;display:flex;align-items:center;justify-content:space-between;gap:16px;">
    <div style="display:flex;align-items:center;gap:10px;">
      <a href="{{ path('public_home') }}" style="display:inline-flex;align-items:center;">
        <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:46px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
      </a>
      <span style="color:#6b6b6b;">© {{ "now"|date("Y") }}</span>
    </div>
    <nav style="display:flex;gap:18px;align-items:center;font-size:13px;">
      <a href="{{ path('public_products') }}" style="color:#bdbdbd;text-decoration:none;">Ürünler</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;">Firmalar</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;">Kategoriler</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;">İhaleler</a>
    </nav>
  </div>
</footer>
{% endblock %}
