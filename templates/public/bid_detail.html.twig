{% extends 'public/base.html.twig' %}

{% block title %}{{ bid.product.name }} - İhale Detayı - Makine Ticaret{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Breadcrumb -->
    <section class="bg-white border-b border-gray-200 py-4">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-4">
                    <li>
                        <a href="{{ path('public_home') }}" class="text-gray-500 hover:text-gray-700 transition-colors">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                            </svg>
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <a href="{{ path('public_bids') }}" class="ml-4 text-gray-500 hover:text-gray-700 transition-colors">İhaleler</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                            <span class="ml-4 text-gray-900 font-medium">İhale Detayı</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Main Content -->
                <div class="lg:col-span-2">
                    <!-- Bid Header -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span class="font-semibold">İhale #{{ bid.id }}</span>
                                </div>
                                {% set now = date() %}
                                {% set endTime = bid.endTime %}
                                {% if endTime > now %}
                                    <span class="bg-green-500 bg-opacity-90 px-3 py-1 rounded-full text-sm font-medium">
                                        Aktif İhale
                                    </span>
                                {% else %}
                                    <span class="bg-gray-500 bg-opacity-90 px-3 py-1 rounded-full text-sm font-medium">
                                        Onaylı İhale
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                        
                        <div class="p-6">
                            <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4">{{ bid.product.name }}</h1>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                                <div>
                                    <span class="text-sm text-gray-500">Marka & Model:</span>
                                    <p class="font-semibold text-gray-900">{{ bid.product.brand }} - {{ bid.product.modelType }}</p>
                                </div>
                                {% if bid.product.category %}
                                    <div>
                                        <span class="text-sm text-gray-500">Kategori:</span>
                                        <p class="font-semibold text-gray-900">{{ bid.product.category.name }}</p>
                                    </div>
                                {% endif %}
                                <div>
                                    <span class="text-sm text-gray-500">İhale Veren Firma:</span>
                                    <p class="font-semibold text-blue-600">
                                        <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}" class="hover:text-blue-800 transition-colors">
                                            {{ bid.company.name }}
                                        </a>
                                    </p>
                                </div>
                                <div>
                                    <span class="text-sm text-gray-500">İhale Tarihi:</span>
                                    <p class="font-semibold text-gray-900">{{ bid.createdAt|date('d.m.Y H:i') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Product Details -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8 border border-gray-100">
                        <div class="bg-gradient-to-r from-slate-600 to-gray-600 text-white px-6 py-4">
                            <div class="flex items-center">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                </svg>
                                <span class="font-semibold">Ürün Detayları</span>
                            </div>
                        </div>
                        
                        <div class="p-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                {% if bid.product.detail %}
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Teknik Detaylar</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product.detail|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}
                                
                                {% if bid.product.description %}
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-900 mb-3">Açıklama</h3>
                                        <div class="prose prose-sm text-gray-600">
                                            {{ bid.product.description|nl2br }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Product Images -->
                            {% if bid.product.images|length > 0 %}
                                <div class="mt-6">
                                    <h3 class="text-lg font-semibold text-gray-900 mb-3">Ürün Görselleri</h3>
                                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                                        {% for image in bid.product.images %}
                                            <div class="aspect-square rounded-lg overflow-hidden bg-gray-100">
                                                <img src="{{ asset(image.imagePath) }}" 
                                                     alt="{{ bid.product.name }}"
                                                     class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 cursor-pointer">
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Bid Description -->
                    {% if bid.description %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-emerald-600 to-green-600 text-white px-6 py-4">
                                <div class="flex items-center">
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    <span class="font-semibold">İhale Açıklaması</span>
                                </div>
                            </div>
                            
                            <div class="p-6">
                                <div class="prose prose-gray max-w-none">
                                    {{ bid.description|nl2br }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Sidebar -->
                <div class="lg:col-span-1">
                    <!-- Bid Summary -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-6 sticky top-6 border border-gray-100">
                        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-6 py-4">
                            <h3 class="text-lg font-semibold">İhale Özeti</h3>
                        </div>
                        
                        <div class="p-6">
                            <!-- Price -->
                            <div class="mb-6">
                                <span class="text-sm text-gray-500 block mb-1">Başlangıç Fiyatı</span>
                                <span class="text-3xl font-bold text-green-600">₺{{ bid.startingPrice|number_format }}</span>
                            </div>

                            <!-- Time Info -->
                            <div class="space-y-4 mb-6">
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">Başlangıç Tarihi:</span>
                                    <span class="font-semibold text-gray-900">{{ bid.createdAt|date('d.m.Y') }}</span>
                                </div>
                                <div class="flex justify-between items-center pb-2 border-b border-gray-100">
                                    <span class="text-sm text-gray-500">Bitiş Tarihi:</span>
                                    {% set now = date() %}
                                    {% set endTime = bid.endTime %}
                                    {% if endTime > now %}
                                        <span class="font-semibold text-orange-600">{{ endTime|date('d.m.Y H:i') }}</span>
                                    {% else %}
                                        <span class="font-semibold text-red-600">Süresi Dolmuş</span>
                                    {% endif %}
                                </div>
                                {% if endTime > now %}
                                    {% set timeLeft = date(endTime).diff(date(now)) %}
                                    <div class="flex justify-between items-center">
                                        <span class="text-sm text-gray-500">Kalan Süre:</span>
                                        <span class="font-semibold text-red-600">
                                            {{ timeLeft.days }} gün {{ timeLeft.h }} saat
                                        </span>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Status -->
                            {% set now = date() %}
                            {% set endTime = bid.endTime %}
                            {% if endTime > now %}
                                <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-green-800 font-semibold">Aktif İhale</span>
                                    </div>
                                    <p class="text-green-600 text-sm mt-1">Bu ihale aktif durumdadır.</p>
                                </div>
                            {% else %}
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <span class="text-gray-800 font-semibold">Onaylı İhale</span>
                                    </div>
                                    <p class="text-gray-600 text-sm mt-1">Bu ihale onaylanmıştır.</p>
                                </div>
                            {% endif %}

                            <!-- Company Info -->
                            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                <h4 class="font-semibold text-blue-900 mb-2">İhale Veren Firma</h4>
                                <div class="space-y-2">
                                    <p class="text-blue-800 font-medium">{{ bid.company.name }}</p>
                                    {% if bid.company.phone %}
                                        <p class="text-blue-600 text-sm">Telefon: {{ bid.company.phone }}</p>
                                    {% endif %}
                                    {% if bid.company.email %}
                                        <p class="text-blue-600 text-sm">E-posta: {{ bid.company.email }}</p>
                                    {% endif %}
                                    {% if bid.company.adress %}
                                        <p class="text-blue-600 text-sm">Adres: {{ bid.company.adress }}</p>
                                    {% endif %}
                                </div>
                                <div class="mt-3">
                                    <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}" 
                                       class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                                        Firma Detayı
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Related Products -->
                    {% if bid.company.products|length > 1 %}
                        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-100">
                            <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-4">
                                <h3 class="text-lg font-semibold">Firmanın Diğer Ürünleri</h3>
                            </div>
                            
                            <div class="p-6">
                                <div class="space-y-3">
                                    {% for product in bid.company.products|slice(0, 5) %}
                                        {% if product.id != bid.product.id %}
                                            <div class="flex items-center p-3 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                                                <div class="flex-1">
                                                    <h4 class="font-medium text-gray-900 text-sm line-clamp-1">{{ product.name }}</h4>
                                                    <p class="text-gray-600 text-xs">{{ product.brand }} - {{ product.modelType }}</p>
                                                </div>
                                                <a href="{{ path('public_product_detail', {'id': product.id}) }}" 
                                                   class="text-blue-600 hover:text-blue-800 transition-colors">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                                
                                {% if bid.company.products|length > 6 %}
                                    <div class="mt-4">
                                        <a href="{{ path('public_company_detail', {'id': bid.company.id}) }}" 
                                           class="block text-center text-blue-600 hover:text-blue-800 text-sm font-medium transition-colors">
                                            Tüm Ürünleri Gör ({{ bid.company.products|length }} ürün)
                                        </a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
