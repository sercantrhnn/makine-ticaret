{% extends 'public/base.html.twig' %}

{% block title %}Alım Talebi Oluştur{% endblock %}

{% block header %}{% endblock %}

{% block body %}
<section class="bg-white border-b border-gray-200">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 py-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Alım Talebi Oluştur</h1>
    <div class="bg-white rounded-lg shadow-sm border p-6">
      {{ form_start(form) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            {{ form_label(form.productName) }}
            {{ form_widget(form.productName, {attr:{class:'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.productName) }}
          </div>
          <div>
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone, {attr:{class:'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.phone) }}
          </div>
          <div>
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {attr:{class:'w-full border rounded-lg px-3 py-2'}}) }}
            {{ form_errors(form.email) }}
          </div>
          <div class="md:col-span-2">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {attr:{class:'w-full border rounded-lg px-3 py-2', rows:5}}) }}
            {{ form_errors(form.description) }}
          </div>
        </div>
        <div class="mt-6">
          <button type="submit" class="px-6 py-3 rounded-lg text-white" style="background:#0a0a0a;">Talep Gönder</button>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</section>
{% endblock %}

{% block footer %}{% endblock %}


