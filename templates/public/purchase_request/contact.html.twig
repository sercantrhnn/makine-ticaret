{% extends 'public/base.html.twig' %}

{% block title %}Alım Talebi İletişim - {{ pr.productName }}{% endblock %}

{% block header %}{% endblock %}

{% block body %}
<section class="bg-white border-b border-gray-200">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 py-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Alım Talebi İletişim</h1>
      <div class="bg-gray-50 rounded-lg p-4">
        <h2 class="text-lg font-semibold text-gray-900">{{ pr.productName }}</h2>
        <p class="text-sm text-gray-600 mt-1">{{ pr.description|default('Açıklama yok') }}</p>
        <div class="mt-2 text-sm text-gray-500">
          <span>Talep Tarihi: {{ pr.date|date('d.m.Y H:i') }}</span>
          {% if pr.phone %}<span class="ml-4">Telefon: {{ pr.phone }}</span>{% endif %}
          {% if pr.email %}<span class="ml-4">E-posta: {{ pr.email }}</span>{% endif %}
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Messages -->
      <div class="lg:col-span-2">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Mesaj Geçmişi</h3>
        <div class="bg-white rounded-lg border border-gray-200 p-4 max-h-96 overflow-y-auto">
          {% if messages|length > 0 %}
            {% for message in messages %}
              <div class="mb-4 p-3 rounded-lg {% if message.sender == app.user %}bg-blue-50 ml-8{% else %}bg-gray-50 mr-8{% endif %}">
                <div class="flex justify-between items-start mb-2">
                  <span class="text-sm font-medium text-gray-900">
                    {% if message.sender == app.user %}
                      Siz
                    {% else %}
                      {{ pr.productName }} Talep Sahibi
                    {% endif %}
                  </span>
                  <span class="text-xs text-gray-500">{{ message.createdAt|date('d.m.Y H:i') }}</span>
                </div>
                <p class="text-sm text-gray-700">{{ message.content|nl2br }}</p>
              </div>
            {% endfor %}
          {% else %}
            <p class="text-gray-500 text-center py-8">Henüz mesaj yok.</p>
          {% endif %}
        </div>
      </div>

      <!-- Message Form -->
      <div class="lg:col-span-1">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Mesaj Gönder</h3>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          {{ form_start(form) }}
            <div class="mb-4">
              {{ form_label(form.content) }}
              {{ form_widget(form.content, {attr:{class:'w-full border rounded-lg px-3 py-2'}}) }}
              {{ form_errors(form.content) }}
            </div>
            <button type="submit" class="w-full px-4 py-2 rounded-lg text-white" style="background:#0a0a0a;">Mesaj Gönder</button>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block footer %}{% endblock %}
