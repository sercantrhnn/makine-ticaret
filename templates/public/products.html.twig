{% extends 'public/base.html.twig' %}

{% block title %}Ürünler{% if search %} - "{{ search }}" araması{% endif %}{% if selectedCategory %} - {{ selectedCategory.name }}{% endif %} | Makine Ticaret{% endblock %}
{% block description %}{% if selectedCategory %}{{ selectedCategory.name }} kategorisindeki ürünler{% else %}Tüm makine ve sanayi ürünleri{% endif %}. Kaliteli ürünler, güvenilir firmalar.{% endblock %}

{% block body %}
<!-- Page Header -->
<section class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1">
                <nav class="flex mb-4" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2 text-sm text-gray-500">
                        <li>
                            <a href="{{ path('public_home') }}" class="hover:text-primary-600">Ana Sayfa</a>
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                            {% if selectedCategory %}
                                <a href="{{ path('public_products') }}" class="hover:text-primary-600">Ürünler</a>
                            {% else %}
                                <span class="text-gray-900">Ürünler</span>
                            {% endif %}
                        </li>
                        {% if selectedCategory %}
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                                <span class="text-gray-900">{{ selectedCategory.name }}</span>
                            </li>
                        {% endif %}
                    </ol>
                </nav>
                
                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    {% if selectedCategory %}
                        {{ selectedCategory.name }}
                    {% elseif search %}
                        "{{ search }}" için Arama Sonuçları
                    {% else %}
                        Tüm Ürünler
                    {% endif %}
                </h1>
                
                <p class="text-gray-600">
                    {% if totalProducts > 0 %}
                        {{ totalProducts }} ürün bulundu
                    {% else %}
                        Ürün bulunamadı
                    {% endif %}
                </p>
            </div>
            
            <!-- Search Form -->
            <div class="mt-6 lg:mt-0 lg:ml-8">
                <form method="GET" class="flex flex-col sm:flex-row gap-3">
                    {% if selectedCategory %}
                        <input type="hidden" name="category" value="{{ selectedCategory.id }}">
                    {% endif %}
                    <div class="relative flex-1 sm:min-w-80">
                        <input type="text" 
                               name="search" 
                               value="{{ search }}" 
                               placeholder="Ürün, marka veya firma ara..." 
                               class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </div>
                    <button type="submit" class="px-6 py-2.5 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors">
                        Ara
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Sidebar - Categories -->
        <aside class="lg:w-64 flex-shrink-0">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 sticky top-24">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Kategoriler</h3>
                
                <div class="space-y-2">
                    <a href="{{ path('public_products') }}" 
                       class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium transition-colors {% if not selectedCategory %}bg-primary-100 text-primary-700{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                        <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        Tüm Ürünler
                    </a>
                    
                    {% for category in categories %}
                        {% if category.parent is null %}
                            <!-- Ana Kategori -->
                            <div class="space-y-1">
                                <a href="{{ path('public_products', {category: category.id}) }}" 
                                   class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium transition-colors {% if selectedCategory and selectedCategory.id == category.id %}bg-primary-100 text-primary-700{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                                    <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                    </svg>
                                    {{ category.name }}
                                </a>
                                
                                <!-- Alt Kategoriler (1. seviye) -->
                                {% for child in category.children %}
                                    {% if child.isActive %}
                                        <div class="ml-6 space-y-1">
                                            <a href="{{ path('public_products', {category: child.id}) }}" 
                                               class="block w-full text-left px-3 py-2 rounded-md text-sm transition-colors {% if selectedCategory and selectedCategory.id == child.id %}bg-primary-100 text-primary-700{% else %}text-gray-600 hover:bg-gray-100{% endif %}">
                                                <svg class="w-3 h-3 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                </svg>
                                                {{ child.name }}
                                            </a>
                                            
                                            <!-- Alt-Alt Kategoriler (2. seviye) -->
                                            {% for grandchild in child.children %}
                                                {% if grandchild.isActive %}
                                                    <div class="ml-6">
                                                        <a href="{{ path('public_products', {category: grandchild.id}) }}" 
                                                           class="block w-full text-left px-3 py-1.5 rounded-md text-xs transition-colors {% if selectedCategory and selectedCategory.id == grandchild.id %}bg-primary-50 text-primary-600{% else %}text-gray-500 hover:bg-gray-50{% endif %}">
                                                            <svg class="w-2 h-2 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                                            </svg>
                                                            {{ grandchild.name }}
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="flex-1">
            {% if products|length > 0 %}
                <!-- Products Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                    {% for product in products %}
                        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow group">
                            <!-- Product Image -->
                            <div class="aspect-w-16 aspect-h-12 bg-gray-100">
                                {% if product.images|length > 0 %}
                                    <img src="{{ asset(product.images.first.imagePath) }}" 
                                         alt="{{ product.name }}" 
                                         class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                                {% else %}
                                    <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                                        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <!-- Product Info -->
                            <div class="p-6">
                                <!-- Status Badges -->
                                <div class="flex items-center justify-between mb-3">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full {% if product.productStatus == 'satilik' %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                                        {{ product.productStatus == 'satilik' ? 'Satılık' : 'Kiralık' }}
                                    </span>
                                    {% if product.productType %}
                                        <span class="px-2 py-1 text-xs font-medium rounded-full {% if product.productType == 'sifir' %}bg-yellow-100 text-yellow-800{% else %}bg-orange-100 text-orange-800{% endif %}">
                                            {{ product.productType == 'sifir' ? 'Sıfır' : 'İkinci El' }}
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <!-- Product Name -->
                                <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                                    <a href="{{ path('public_product_detail', {id: product.id}) }}" 
                                       class="hover:text-primary-600 transition-colors">
                                        {{ product.name }}
                                    </a>
                                </h3>
                                
                                <!-- Product Details -->
                                <div class="space-y-1 text-sm text-gray-600 mb-4">
                                    {% if product.brand %}
                                        <p><span class="font-medium">Marka:</span> {{ product.brand }}{% if product.modelType %} - {{ product.modelType }}{% endif %}</p>
                                    {% endif %}
                                    
                                    {% if product.category %}
                                        <p>
                                            <span class="font-medium">Kategori:</span>
                                            <a href="{{ path('public_products', {category: product.category.id}) }}" 
                                               class="text-primary-600 hover:text-primary-700">
                                                {{ product.category.name }}
                                            </a>
                                        </p>
                                    {% endif %}
                                    
                                    {% if product.company %}
                                        <p>
                                            <span class="font-medium">Firma:</span>
                                            <a href="{{ path('public_company_detail', {id: product.company.id}) }}" 
                                               class="text-primary-600 hover:text-primary-700">
                                                {{ product.company.name }}
                                            </a>
                                        </p>
                                    {% endif %}
                                </div>
                                
                                <!-- Description -->
                                {% if product.description %}
                                    <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                        {{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}
                                    </p>
                                {% endif %}
                                
                                <!-- Action Button -->
                                <a href="{{ path('public_product_detail', {id: product.id}) }}" 
                                   class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-lg hover:bg-primary-700 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    Detayları Görüntüle
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                
                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 rounded-lg">
                        <div class="flex flex-1 justify-between sm:hidden">
                            {% if currentPage > 1 %}
                                <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage - 1})) }}" 
                                   class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Önceki
                                </a>
                            {% endif %}
                            {% if currentPage < totalPages %}
                                <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage + 1})) }}" 
                                   class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Sonraki
                                </a>
                            {% endif %}
                        </div>
                        <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                            <div>
                                <p class="text-sm text-gray-700">
                                    <span class="font-medium">{{ ((currentPage - 1) * 12) + 1 }}</span>
                                    -
                                    <span class="font-medium">{{ (currentPage * 12) > totalProducts ? totalProducts : (currentPage * 12) }}</span>
                                    arası,
                                    <span class="font-medium">{{ totalProducts }}</span>
                                    sonuçtan
                                </p>
                            </div>
                            <div>
                                <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                                    <!-- Previous Page -->
                                    {% if currentPage > 1 %}
                                        <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage - 1})) }}" 
                                           class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    {% endif %}
                                    
                                    <!-- Page Numbers -->
                                    {% for page in 1..totalPages %}
                                        {% if page == currentPage %}
                                            <span class="relative z-10 inline-flex items-center bg-primary-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                                                {{ page }}
                                            </span>
                                        {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                                            <a href="{{ path('public_products', app.request.query.all|merge({page: page})) }}" 
                                               class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                                {{ page }}
                                            </a>
                                        {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                                            <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 focus:outline-offset-0">
                                                ...
                                            </span>
                                        {% endif %}
                                    {% endfor %}
                                    
                                    <!-- Next Page -->
                                    {% if currentPage < totalPages %}
                                        <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage + 1})) }}" 
                                           class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    {% endif %}
                                </nav>
                            </div>
                        </div>
                    </div>
                {% endif %}
                
            {% else %}
                <!-- No Products Found -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
                    <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Ürün Bulunamadı</h3>
                    <p class="text-gray-600 mb-6">
                        {% if search %}
                            "{{ search }}" aramanızla eşleşen ürün bulunamadı.
                        {% elseif selectedCategory %}
                            {{ selectedCategory.name }} kategorisinde henüz ürün bulunmuyor.
                        {% else %}
                            Henüz hiç ürün eklenmemiş.
                        {% endif %}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-3 justify-center">
                        <a href="{{ path('public_products') }}" 
                           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            Tüm Ürünler
                        </a>
                        <a href="{{ path('public_home') }}" 
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            Ana Sayfa
                        </a>
                    </div>
                </div>
            {% endif %}
        </main>
    </div>
</div>
{% endblock %}
