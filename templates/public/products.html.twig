{% extends 'public/base.html.twig' %}

{% block title %}Ürünler{% if search %} - "{{ search }}" araması{% endif %}{% if selectedCategory %} - {{ selectedCategory.name }}{% endif %} | Makine Ticaret{% endblock %}
{% block description %}{% if selectedCategory %}{{ selectedCategory.name }} kategorisindeki ürünler{% else %}Tüm makine ve sanayi ürünleri{% endif %}. Kaliteli ürünler, güvenilir firmalar.{% endblock %}

{% block stylesheets %}
<style>
  html, body { background: linear-gradient(180deg, #f5f7fb 0%, #eef1f5 60%) !important; }
  main { background: transparent !important; }
  .page-dark { background: transparent; color:#111827; }
  .page-hero { background: linear-gradient(180deg, #f6f8fc 0%, #eef1f5 70%); }
  .hero-fade { height: 28px; background: linear-gradient(to bottom, rgba(238,241,245,0), #eef1f5); }
  .card-light { background:#ffffff; border-color:#e5e7eb; }
  .muted { color:#6b7280; }
  .accent-link { color:#374151; }
  .accent-link:hover { color:#111827; }
  .btn-neutral { background:#C0C0C0; color:#111111; transition: background-color .2s ease; box-shadow: 0 1px 2px rgba(0,0,0,.06); }
  .btn-neutral:hover { background:#B8B8B8; }
</style>
{% endblock %}

{% block header %}
<header style="position:sticky;top:0;z-index:60;background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between;color:#fff;">
    <a href="{{ path('public_home') }}" style="display:flex;align-items:center;text-decoration:none;color:#fff;">
      <div style="width:36px;height:36px;background:#ffffff;border-radius:6px;display:flex;align-items:center;justify-content:center;margin-right:10px;">
        <span style="color:#0a0a0a;font-weight:800;font-size:14px;letter-spacing:.5px;">MT</span>
      </div>
      <div>
        <div style="font-weight:700;letter-spacing:.4px;">Makine Ticaret</div>
        <div style="font-size:11px;color:#b3b3b3;">Ürünler</div>
      </div>
    </a>
    <nav style="display:flex;gap:22px;align-items:center;">
      <a href="{{ path('public_products') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">Ürünler</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Firmalar</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Kategoriler</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">İhaleler</a>
      {% if app.user %}
        <div style="position:relative;" id="userMenuRoot">
          <button id="userMenuButton" style="display:flex;align-items:center;gap:8px;background:transparent;border:0;color:#e5e5e5;cursor:pointer;font-size:14px;">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span>{{ (app.user.name ~ ' ' ~ app.user.surname)|trim ?: (app.user.username ?? app.user.email) }}</span>
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </button>
          <div id="userMenuDropdown" style="display:none;position:absolute;right:0;top:calc(100% + 8px);background:#111214;border:1px solid #222428;border-radius:8px;min-width:160px;box-shadow:0 8px 24px rgba(0,0,0,.35);">
            <a href="{{ path('app_logout') }}" style="display:block;padding:10px 12px;color:#ff7b7b;text-decoration:none;font-size:14px;border-bottom-left-radius:8px;border-bottom-right-radius:8px;">Çıkış Yap</a>
          </div>
        </div>
        <script>
          (function(){
            var btn = document.getElementById('userMenuButton');
            var dd = document.getElementById('userMenuDropdown');
            var root = document.getElementById('userMenuRoot');
            if (!btn || !dd || !root) return;
            btn.addEventListener('click', function(e){
              e.stopPropagation();
              dd.style.display = dd.style.display === 'none' || dd.style.display === '' ? 'block' : 'none';
            });
            document.addEventListener('click', function(e){
              if (!root.contains(e.target)) { dd.style.display = 'none'; }
            });
          })();
        </script>
      {% else %}
        <a href="{{ path('app_login') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Giriş Yap</a>
        <a href="{{ path('app_register') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">Kayıt Ol</a>
      {% endif %}
    </nav>
  </div>
</header>
{% endblock %}

{% block body %}
<style>
  .page-dark { background: transparent; color:#111827; }
  .muted { color:#6b7280; }
  .accent-link { color:#374151; }
  .accent-link:hover { color:#111827; }
</style>
<!-- Page Header -->
<section class="border-b page-hero" style="border-color:#e5e7eb;box-shadow:0 1px 0 rgba(17,24,39,.04);">
    <div class="mx-auto px-4 sm:px-6 lg:px-8 py-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
            <div class="flex-1">
                <nav class="flex mb-4" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2 text-sm text-gray-500">
                        <li>
                            <a href="{{ path('public_home') }}" class="hover:text-primary-600">Ana Sayfa</a>
                        </li>
                        <li class="flex items-center">
                            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                            {% if selectedCategory %}
                                <a href="{{ path('public_products') }}" class="hover:text-primary-600">Ürünler</a>
                            {% else %}
                                <span class="text-gray-900">Ürünler</span>
                            {% endif %}
                        </li>
                        {% if selectedCategory %}
                            <li class="flex items-center">
                                <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                                </svg>
                                <span class="text-gray-900">{{ selectedCategory.name }}</span>
                            </li>
                        {% endif %}
                    </ol>
                </nav>

                <h1 class="text-3xl font-bold text-gray-900 mb-2">
                    {% if selectedCategory %}
                        {{ selectedCategory.name }}
                    {% elseif search %}
                        "{{ search }}" için Arama Sonuçları
                    {% else %}
                        Tüm Ürünler
                    {% endif %}
                </h1>

                <p class="muted">
                    {% if totalProducts > 0 %}
                        {{ totalProducts }} ürün bulundu
                    {% else %}
                        Ürün bulunamadı
                    {% endif %}
                </p>
            </div>

            <!-- Search Form -->
            <div class="mt-6 lg:mt-0 lg:ml-8">
                <form method="GET" class="flex flex-col sm:flex-row gap-3">
                    {% if selectedCategory %}
                        <input type="hidden" name="category" value="{{ selectedCategory.id }}">
                    {% endif %}

                    <div>
                        <select name="sort" class="px-3 py-2.5 border border-gray-300 rounded-lg bg-white text-gray-900 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" onchange="this.form.submit()">
                            <option value="" {% if not sort %}selected{% endif %}>Sırala</option>
                            <option value="price_asc" {% if sort == 'price_asc' %}selected{% endif %}>Fiyata göre artan</option>
                            <option value="price_desc" {% if sort == 'price_desc' %}selected{% endif %}>Fiyata göre azalan</option>
                            <option value="name_asc" {% if sort == 'name_asc' %}selected{% endif %}>Ada göre A → Z</option>
                            <option value="name_desc" {% if sort == 'name_desc' %}selected{% endif %}>Ada göre Z → A</option>
                        </select>
                    </div>

                    <div class="relative flex-1 sm:min-w-80">
                        <input type="text"
                               name="search"
                               value="{{ search }}"
                               placeholder="Ürün, marka veya firma ara..."
                               class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg bg-white text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </div>
                    </div>

                    <button type="submit" class="px-6 py-2.5 font-medium rounded-lg transition-colors shadow btn-neutral" onmouseover="this.style.background='#B8B8B8'" onmouseout="this.style.background='#C0C0C0'">
                        Ara
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
<div class="hero-fade"></div>

<div class="mx-auto px-4 sm:px-6 lg:px-8 py-8 page-dark" style="background:transparent;max-width:80%;padding-left:16px;padding-right:16px;">
    <div class="flex flex-col lg:flex-row gap-8">

        <!-- Sidebar - Categories (contextual) -->
        <aside class="lg:w-64 flex-shrink-0">
            <div class="rounded-lg shadow-sm border p-6 sticky top-24 card-light">
                {% if selectedCategory %}
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">{{ selectedCategory.name }}</h3>
                    <div class="space-y-2">
                        <a href="{{ path('public_products') }}" class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-100">Tüm Ürünler</a>
                        {% for child in selectedCategory.children %}
                            {% if child.isActive %}
                                <div class="space-y-1">
                                    <a href="{{ path('public_products', {category: child.id}) }}"
                                       class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium transition-colors {% if selectedCategory and selectedCategory.id == child.id %}bg-gray-100 text-gray-900{% else %}text-gray-700 hover:bg-gray-100{% endif %}">
                                        <svg class="w-3 h-3 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                                        {{ child.name }}
                                    </a>
                                    {% set activeGrandchildren = [] %}
                                    {% for grandchild in child.children %}
                                        {% if grandchild.isActive %}
                                            {% set activeGrandchildren = activeGrandchildren|merge([grandchild]) %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if activeGrandchildren|length > 0 %}
                                        <div class="ml-4">
                                            {% for grandchild in activeGrandchildren %}
                                                <a href="{{ path('public_products', {category: grandchild.id}) }}"
                                                   class="block w-full text-left px-3 py-1.5 rounded-md text-xs transition-colors text-gray-600 hover:bg-gray-100">
                                                    <svg class="w-2 h-2 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                                                    {{ grandchild.name }}
                                                </a>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% else %}
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Kategoriler</h3>
                    <div class="space-y-2">
                        <a href="{{ path('public_products') }}"
                           class="block w-full text-left px-3 py-2 rounded-md text-sm font-medium transition-colors {% if not selectedCategory %}bg-gray-100 text-gray-900{% else %}text-gray-700 hover:bg-gray-100{% endif %}">Tüm Ürünler</a>
                        {% for category in categories %}
                            {% if category.parent is null %}
                                <a href="{{ path('public_products', {category: category.id}) }}" class="block w-full text-left px-3 py-2 rounded-md text-sm text-gray-700 hover:bg-gray-100">{{ category.name }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1">
            {% if products|length > 0 %}
                <!-- Products Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8" style="gap:24px;">
                    {% for product in products %}
                        <div class="group rounded-xl shadow-md border overflow-hidden transition-all duration-300 transform hover:-translate-y-1 card-light">
                            <!-- Product Image -->
                            <div class="relative h-72 overflow-hidden bg-gray-50">
                                {% if product.images|length > 0 %}
                                    <img src="{{ asset(product.images.first.imagePath) }}"
                                         alt="{{ product.name }}"
                                         class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                                {% else %}
                                    <div class="flex items-center justify-center h-full">
                                        <div class="w-20 h-20 rounded-3xl flex items-center justify-center bg-gray-100">
                                            <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                            </svg>
                                        </div>
                                    </div>
                                {% endif %}

                                <!-- Status Badges -->
                                <div class="absolute top-4 left-4 flex flex-col gap-2">
                                    <span class="px-3 py-1.5 text-xs font-semibold rounded-full backdrop-blur-sm {% if product.productStatus == 'satilik' %}bg-emerald-600 text-white shadow-emerald-500/25{% else %}bg-indigo-600 text-white shadow-indigo-500/25{% endif %} shadow-lg">
                                        {{ product.productStatus == 'satilik' ? 'Satılık' : 'Kiralık' }}
                                    </span>
                                    {% if product.productType %}
                                        <span class="px-3 py-1.5 text-xs font-semibold rounded-full backdrop-blur-sm {% if product.productType == 'sifir' %}bg-amber-600 text-white shadow-amber-500/25{% else %}bg-orange-600 text-white shadow-orange-500/25{% endif %} shadow-lg">
                                            {{ product.productType == 'sifir' ? 'Sıfır' : 'İkinci El' }}
                                        </span>
                                    {% endif %}
                                </div>

                                <!-- Quick View Overlay -->
                                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300">
                                    <div class="absolute bottom-4 left-4 right-4">
                                        <a href="{{ path('public_product_detail', {id: product.id}) }}"
                                           class="block w-full bg-white text-gray-900 text-center py-2.5 px-4 rounded-lg font-medium text-sm shadow-lg transform translate-y-2 group-hover:translate-y-0 transition-all duration-300 hover:bg-gray-50">
                                            Detayları Görüntüle
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Info -->
                            <div class="p-6">
                                <!-- Product Name -->
                                <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-indigo-600 transition-colors">
                                    <a href="{{ path('public_product_detail', {id: product.id}) }}">
                                        {{ product.name }}
                                    </a>
                                </h3>

                                <!-- Product Details -->
                                <div class="space-y-3 mb-4">
                                    {% if product.brand %}
                                        <div class="flex items-start">
                                            <svg class="w-4 h-4 text-gray-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                            </svg>
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">{{ product.brand }}</p>
                                                {% if product.modelType %}
                                                    <p class="text-xs text-gray-500">{{ product.modelType }}</p>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if product.category %}
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 text-gray-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                            </svg>
                                            <a href="{{ path('public_products', {category: product.category.id}) }}"
                                               class="text-sm accent-link transition-colors">
                                                {{ product.category.name }}
                                            </a>
                                        </div>
                                    {% endif %}

                                    {% if product.company %}
                                        <div class="flex items-center">
                                            <svg class="w-4 h-4 text-gray-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                            </svg>
                                            <a href="{{ path('public_company_detail', {id: product.company.id}) }}"
                                               class="text-sm text-indigo-600 hover:text-indigo-700 font-medium transition-colors">
                                                {{ product.company.name }}
                                            </a>
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Description -->
                                {% if product.description %}
                                    <p class="text-gray-600 text-sm mb-5 line-clamp-2 leading-relaxed">
                                        {{ product.description|slice(0, 120) }}{% if product.description|length > 120 %}...{% endif %}
                                    </p>
                                {% endif %}

                                <!-- Footer Actions: price left, detail button right -->
                                <div class="pt-4 border-t border-gray-100 flex items-center justify-between">
                                    <div class="text-lg font-extrabold text-gray-900">
                                        {% if product.price and product.currency %}
                                            {% set currencySymbols = {'TRY':'₺','USD':'$','EUR':'€','GBP':'£'} %}
                                            <span>{{ currencySymbols[product.currency]|default(product.currency) }}</span>
                                            <span>{{ product.price|number_format(2, ',', '.') }}</span>
                                        {% else %}
                                            <span class="text-sm text-gray-500">Fiyat için iletişime geçin</span>
                                        {% endif %}
                                    </div>
                                    <a href="{{ path('public_product_detail', {id: product.id}) }}"
                                       class="inline-flex items-center justify-center px-4 py-2 rounded-lg font-medium transition-all duration-300 transform group-hover:scale-105 shadow-md"
                                       style="background:#C0C0C0;color:#111111;">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                        </svg>
                                        Ürün Detayı
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% if totalPages > 1 %}
                    <div class="flex items-center justify-between border-t border-gray-200 bg-white px-4 py-3 sm:px-6 rounded-lg">
                        <div class="flex flex-1 justify-between sm:hidden">
                            {% if currentPage > 1 %}
                                <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage - 1})) }}"
                                   class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Önceki
                                </a>
                            {% endif %}
                            {% if currentPage < totalPages %}
                                <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage + 1})) }}"
                                   class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Sonraki
                                </a>
                            {% endif %}
                        </div>
                        <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                            <div>
                                <p class="text-sm text-gray-700">
                                    <span class="font-medium">{{ ((currentPage - 1) * 12) + 1 }}</span>
                                    -
                                    <span class="font-medium">{{ (currentPage * 12) > totalProducts ? totalProducts : (currentPage * 12) }}</span>
                                    arası,
                                    <span class="font-medium">{{ totalProducts }}</span>
                                    sonuçtan
                                </p>
                            </div>
                            <div>
                                <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
                                    <!-- Previous Page -->
                                    {% if currentPage > 1 %}
                                        <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage - 1})) }}"
                                           class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    {% endif %}

                                    <!-- Page Numbers -->
                                    {% for page in 1..totalPages %}
                                        {% if page == currentPage %}
                                            <span class="relative z-10 inline-flex items-center bg-primary-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">
                                                {{ page }}
                                            </span>
                                        {% elseif page == 1 or page == totalPages or (page >= currentPage - 2 and page <= currentPage + 2) %}
                                            <a href="{{ path('public_products', app.request.query.all|merge({page: page})) }}"
                                               class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                                {{ page }}
                                            </a>
                                        {% elseif page == currentPage - 3 or page == currentPage + 3 %}
                                            <span class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-700 ring-1 ring-inset ring-gray-300 focus:outline-offset-0">
                                                ...
                                            </span>
                                        {% endif %}
                                    {% endfor %}

                                    <!-- Next Page -->
                                    {% if currentPage < totalPages %}
                                        <a href="{{ path('public_products', app.request.query.all|merge({page: currentPage + 1})) }}"
                                           class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0">
                                            <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    {% endif %}
                                </nav>
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% else %}
                <!-- No Products Found -->
                <div class="rounded-lg shadow-sm border p-12 text-center card-light">
                    <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                    </svg>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Ürün Bulunamadı</h3>
                    <p class="text-gray-600 mb-6">
                        {% if search %}
                            "{{ search }}" aramanızla eşleşen ürün bulunamadı.
                        {% elseif selectedCategory %}
                            {{ selectedCategory.name }} kategorisinde henüz ürün bulunmuyor.
                        {% else %}
                            Henüz hiç ürün eklenmemiş.
                        {% endif %}
                    </p>
                    <div class="flex flex-col sm:flex-row gap-3 justify-center">
                        <a href="{{ path('public_products') }}"
                           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                            <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            Tüm Ürünler
                        </a>
                        <a href="{{ path('public_home') }}"
                           class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                            <svg class="w-4 h-4 mr-2 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            Ana Sayfa
                        </a>
                    </div>
                </div>
            {% endif %}
        </main>
    </div>
</div>
{% endblock %}

