                            <!-- Product Info -->
                            <div class="product-info">
                                <!-- Product Name -->
                                <h3 class="product-title">
                                    <a href="{{ path('public_product_detail', {id: product.id}) }}">
                                        {{ product|smart_translate('name', app.request.locale) }}
