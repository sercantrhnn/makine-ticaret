{% extends 'public/base.html.twig' %}

{% block title %}{{ company.name }} | Makine Ticaret{% endblock %}
{% block description %}{{ company.about|slice(0, 160) }}{% if company.about|length > 160 %}...{% endif %}{% endblock %}

{% block header %}
<header style="position:sticky;top:0;z-index:60;background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between;color:#fff;">
    <a href="{{ path('public_home') }}" style="display:flex;align-items:center;text-decoration:none;color:#fff;">
      <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:44px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
    </a>
    <nav style="display:flex;gap:22px;align-items:center;">
      <a href="{{ path('public_products') }}" style="color:#e5e5e5;text-decoration:none;font-weight:600;font-size:14px;">Ürünler</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Firmalar</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">Kategoriler</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;font-size:14px;">İhaleler</a>
    </nav>
  </div>
</header>
{% endblock %}
{% block body %}
<!-- Breadcrumb -->
<section class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4" style="max-width:80%;padding-left:16px;padding-right:16px;">
        <nav class="flex" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm text-gray-500">
                <li>
                    <a href="{{ path('public_home') }}" class="hover:text-primary-600">Ana Sayfa</a>
                </li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <a href="{{ path('public_companies') }}" class="hover:text-primary-600">Firmalar</a>
                </li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="text-gray-900">{{ company.name }}</span>
                </li>
            </ol>
        </nav>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
    <!-- Company Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden mb-8">
        <!-- Background Image -->
        {% if company.backgroundPhotoPath %}
            <div class="h-64 bg-cover bg-center" style="background-image: url('{{ asset(company.backgroundPhotoPath) }}')">
                <div class="h-full bg-black bg-opacity-40 flex items-end">
                    <div class="p-8 text-white">
                        <div class="flex items-center">
                            {% if company.logoPath %}
                                <img src="{{ asset(company.logoPath) }}"
                                     alt="{{ company.name }}"
                                     class="w-20 h-20 rounded-lg bg-white p-2 mr-6">
                            {% else %}
                                <div class="w-20 h-20 bg-white rounded-lg flex items-center justify-center mr-6">
                                    <span class="text-2xl font-bold text-primary-600">
                                        {{ company.name|slice(0,1)|upper }}
                                    </span>
                                </div>
                            {% endif %}
                            <div>
                                <h1 class="text-3xl font-bold">{{ company.name }}</h1>
                                {% if company.title %}
                                    <p class="text-xl text-gray-200">{{ company.title }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="h-32" style="background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
                <div class="h-full flex items-center p-8 text-white">
                    <div class="flex items-center">
                        {% if company.logoPath %}
                            <img src="{{ asset(company.logoPath) }}"
                                 alt="{{ company.name }}"
                                 class="w-16 h-16 rounded-lg bg-white p-2 mr-6">
                        {% else %}
                            <div class="w-16 h-16 bg-white rounded-lg flex items-center justify-center mr-6">
                                <span class="text-xl font-bold text-primary-600">
                                    {{ company.name|slice(0,1)|upper }}
                                </span>
                            </div>
                        {% endif %}
                        <div>
                            <h1 class="text-3xl font-bold">{{ company.name }}</h1>
                            {% if company.title %}
                                <p class="text-xl text-gray-300">{{ company.title }}</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

        <!-- Company Info -->
        <div class="p-8">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <!-- Left Column - Company Details -->
                <div class="lg:col-span-2">
                    {% if company.activityType %}
                        <div class="mb-4">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                                {{ company.activityType }}
                            </span>
                        </div>
                    {% endif %}

                    {% if company.about %}
                        <div class="mb-6">
                            <h2 class="text-xl font-semibold text-gray-900 mb-3">Hakkımızda</h2>
                            <div class="prose prose-gray max-w-none">
                                <p class="text-gray-700 leading-relaxed">{{ company.about|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Company Specifications -->
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Firma Bilgileri</h3>
                        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            {% if company.foundedYear %}
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Kuruluş Yılı</dt>
                                    <dd class="mt-1 text-sm text-gray-900">{{ company.foundedYear }}</dd>
                                </div>
                            {% endif %}

                            {% if company.tradeRegistryNo %}
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Ticaret Sicil No</dt>
                                    <dd class="mt-1 text-sm text-gray-900">{{ company.tradeRegistryNo }}</dd>
                                </div>
                            {% endif %}

                            {% if company.mersisNo %}
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">MERSİS No</dt>
                                    <dd class="mt-1 text-sm text-gray-900">{{ company.mersisNo }}</dd>
                                </div>
                            {% endif %}

                            {% if company.activityType %}
                                <div>
                                    <dt class="text-sm font-medium text-gray-500">Faaliyet Alanı</dt>
                                    <dd class="mt-1 text-sm text-gray-900">{{ company.activityType }}</dd>
                                </div>
                            {% endif %}
                        </dl>
                    </div>
                </div>

                <!-- Right Column - Contact Info -->
                <div>
                    <div class="bg-white border border-gray-200 rounded-lg p-6 sticky top-24">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">İletişim Bilgileri</h3>

                        <div class="space-y-4">
                            {% if company.phone %}
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Telefon</p>
                                        <a href="tel:{{ company.phone }}" class="text-sm text-primary-600 hover:text-primary-700">
                                            {{ company.phone }}
                                        </a>
                                    </div>
                                </div>
                            {% endif %}

                            {% if company.email %}
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">E-posta</p>
                                        <a href="mailto:{{ company.email }}" class="text-sm text-primary-600 hover:text-primary-700">
                                            {{ company.email }}
                                        </a>
                                    </div>
                                </div>
                            {% endif %}

                            {% if company.website %}
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9v-9m0-9v9m0 9c-5 0-9-4-9-9s4-9 9-9"></path>
                                    </svg>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Website</p>
                                        <a href="{{ company.website }}" target="_blank" class="text-sm text-primary-600 hover:text-primary-700">
                                            {{ company.website|replace({'https://': '', 'http://': '', 'www.': ''}) }}
                                        </a>
                                    </div>
                                </div>
                            {% endif %}

                            {% if company.adress %}
                                <div class="flex items-start">
                                    <svg class="w-5 h-5 text-gray-400 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Adres</p>
                                        <p class="text-sm text-gray-600">{{ company.adress }}</p>
                                        {% if company.mapsUrl %}
                                            <a href="{{ company.mapsUrl }}" target="_blank" class="text-sm text-primary-600 hover:text-primary-700">
                                                Haritada Görüntüle
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Contact Actions -->
                        <div class="mt-6 space-y-3">
                            {% if company.phone %}
                                <a href="tel:{{ company.phone }}"
                                   class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                    </svg>
                                    Hemen Ara
                                </a>
                            {% endif %}

                            {% if company.email %}
                                <a href="mailto:{{ company.email }}"
                                   class="w-full inline-flex items-center justify-center px-4 py-2 border border-primary-600 text-sm font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                    </svg>
                                    E-posta Gönder
                                </a>
                            {% endif %}
                        </div>

                        {% if company.catalogPath %}
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <a href="{{ asset(company.catalogPath) }}" target="_blank"
                                   class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    Katalog İndir
                                </a>
                            </div>
                        {% endif %}

                        {% if company.certificatePath %}
                            <div class="mt-3">
                                <a href="{{ asset(company.certificatePath) }}" target="_blank"
                                   class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                    Sertifika İndir
                                </a>
                            </div>
                        {% endif %}

                        {% if mapEmbedUrl %}
                            <div class="mt-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-3">Harita</h3>
                                <div class="rounded-lg overflow-hidden border border-gray-200" style="aspect-ratio: 16 / 9;">
                                    <iframe
                                        src="{{ mapEmbedUrl }}"
                                        width="100%"
                                        height="100%"
                                        style="border:0;"
                                        allowfullscreen=""
                                        loading="lazy"
                                        referrerpolicy="no-referrer-when-downgrade"></iframe>
                                </div>
                                <a href="{{ company.mapsUrl ?: mapEmbedUrl }}" target="_blank" class="mt-2 inline-flex items-center text-sm text-primary-600 hover:text-primary-700">
                                    Google Haritalar'da Aç
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Products -->
    <section>
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-900">Firma Ürünleri</h2>
            {% if products|length > 0 %}
                <span class="text-gray-600">{{ products|length }} ürün</span>
            {% endif %}
        </div>

        {% if products|length > 0 %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" style="gap:24px;">
                {% for product in products %}
                    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow group">
                        <!-- Product Image -->
                        <div class="relative h-72 bg-gray-100 overflow-hidden">
                            {% if product.images|length > 0 %}
                                <img src="{{ asset(product.images.first.imagePath) }}"
                                     alt="{{ product.name }}"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                            {% else %}
                                <div class="w-full h-full bg-gray-100 flex items-center justify-center">
                                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Product Info -->
                        <div class="p-6">
                            <!-- Status Badges -->
                            <div class="flex items-center justify-between mb-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full {% if product.productStatus == 'satilik' %}bg-green-100 text-green-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                                    {{ product.productStatus == 'satilik' ? 'Satılık' : 'Kiralık' }}
                                </span>
                                {% if product.productType %}
                                    <span class="px-2 py-1 text-xs font-medium rounded-full {% if product.productType == 'sifir' %}bg-yellow-100 text-yellow-800{% else %}bg-orange-100 text-orange-800{% endif %}">
                                        {{ product.productType == 'sifir' ? 'Sıfır' : 'İkinci El' }}
                                    </span>
                                {% endif %}
                            </div>

                            <!-- Product Name -->
                            <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                                <a href="{{ path('public_product_detail', {id: product.id}) }}"
                                   class="hover:text-primary-600 transition-colors">
                                    {{ product.name }}
                                </a>
                            </h3>

                            <!-- Product Details -->
                            <div class="space-y-1 text-sm text-gray-600 mb-4">
                                {% if product.brand %}
                                    <p><span class="font-medium">Marka:</span> {{ product.brand }}{% if product.modelType %} - {{ product.modelType }}{% endif %}</p>
                                {% endif %}

                                {% if product.category %}
                                    <p>
                                        <span class="font-medium">Kategori:</span>
                                        <a href="{{ path('public_products', {category: product.category.id}) }}"
                                           class="text-primary-600 hover:text-primary-700">
                                            {{ product.category.name }}
                                        </a>
                                    </p>
                                {% endif %}
                            </div>

                            <!-- Description -->
                            {% if product.description %}
                                <p class="text-gray-600 text-sm mb-4 line-clamp-2">
                                    {{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}
                                </p>
                            {% endif %}

                            <!-- Action Button -->
                            <a href="{{ path('public_product_detail', {id: product.id}) }}"
                               class="inline-flex items-center justify-center w-full px-4 py-3 text-sm font-medium rounded-lg transition-colors"
                               style="background:#C0C0C0;color:#111111;">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                                Detayları Görüntüle
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
                <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                </svg>
                <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz Ürün Bulunmuyor</h3>
                <p class="text-gray-600">Bu firma henüz hiç ürün eklememış.</p>
            </div>
        {% endif %}
    </section>
</div>
{% endblock %}
{% block footer %}
<footer style="background:#0a0a0a;color:#bdbdbd;border-top:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:28px 16px;display:flex;align-items:center;justify-content:space-between;gap:16px;">
    <div style="display:flex;align-items:center;gap:10px;">
      <a href="{{ path('public_home') }}" style="display:inline-flex;align-items:center;">
        <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:46px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
      </a>
      <span style="color:#6b6b6b;">© {{ "now"|date("Y") }}</span>
    </div>
    <nav style="display:flex;gap:18px;align-items:center;font-size:13px;">
      <a href="{{ path('public_products') }}" style="color:#bdbdbd;text-decoration:none;">Ürünler</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;">Firmalar</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;">Kategoriler</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;">İhaleler</a>
    </nav>
  </div>
</footer>
{% endblock %}
