  <div class="footer-container">
    <div class="footer-brand">
      <a href="{{ path('public_home') }}" class="footer-logo">
        <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" class="footer-logo-img"/>
      </a>
