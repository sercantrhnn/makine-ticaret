{% extends 'admin/base.html.twig' %}

{% block title %}İhale Detayı #{{ bid.id }}{% endblock %}

{% block page_title %}İhale Detayı #{{ bid.id }}{% endblock %}

{% block body %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">İhale Detayı</h1>
            <p class="mt-1 text-sm text-gray-500">İhale bilgilerini görüntüleyin ve yönetin</p>
        </div>
        <div class="flex space-x-3">
            <a href="{{ path('app_bids_edit', {'id': bid.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Düzenle
            </a>
            <a href="{{ path('app_bids_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Geri Dön
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">İhale Bilgileri</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">İhale ID</label>
                            <p class="text-lg font-semibold text-gray-900">#{{ bid.id }}</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Durum</label>
                            {% set statusClasses = {
                                'pending': 'bg-yellow-100 text-yellow-800',
                                'approved': 'bg-green-100 text-green-800',
                                'rejected': 'bg-red-100 text-red-800',
                                'active': 'bg-blue-100 text-blue-800',
                                'completed': 'bg-gray-100 text-gray-800',
                                'cancelled': 'bg-red-100 text-red-800'
                            } %}
                            <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full {{ statusClasses[bid.status] ?? 'bg-gray-100 text-gray-800' }}">
                                {% if bid.status == 'pending' %}Beklemede
                                {% elseif bid.status == 'approved' %}Onaylandı
                                {% elseif bid.status == 'rejected' %}Reddedildi
                                {% elseif bid.status == 'active' %}Aktif
                                {% elseif bid.status == 'completed' %}Tamamlandı
                                {% elseif bid.status == 'cancelled' %}İptal Edildi
                                {% else %}{{ bid.status }}
                                {% endif %}
                            </span>
                        </div>
                    </div>

                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Şirket</label>
                        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
                            {% if bid.company.logoPath %}
                                <img src="{{ asset('uploads/companies/' ~ bid.company.logoPath) }}" 
                                     alt="{{ bid.company.name }}" 
                                     class="h-12 w-12 rounded-full object-cover mr-4">
                            {% else %}
                                <div class="h-12 w-12 rounded-full bg-primary-100 flex items-center justify-center mr-4">
                                    <span class="text-lg font-medium text-primary-600">{{ bid.company.name|slice(0,1)|upper }}</span>
                                </div>
                            {% endif %}
                            <div>
                                <h4 class="text-lg font-medium text-gray-900">{{ bid.company.name }}</h4>
                                {% if bid.company.shortName %}
                                    <p class="text-sm text-gray-500">{{ bid.company.shortName }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="mt-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Ürün</label>
                        <div class="p-4 bg-gray-50 rounded-lg">
                            <h4 class="text-lg font-medium text-gray-900 mb-2">{{ bid.product.name }}</h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-600">
                                <div>
                                    <span class="font-medium">Marka:</span> {{ bid.product.brand }}
                                </div>
                                <div>
                                    <span class="font-medium">Model:</span> {{ bid.product.modelType }}
                                </div>
                                {% if bid.product.listingNo %}
                                    <div>
                                        <span class="font-medium">Liste No:</span> {{ bid.product.listingNo }}
                                    </div>
                                {% endif %}
                            </div>
                            {% if bid.product.description %}
                                <div class="mt-3">
                                    <span class="font-medium text-gray-700">Açıklama:</span>
                                    <p class="mt-1 text-gray-600">{{ bid.product.description|nl2br }}</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Başlangıç Fiyatı</label>
                            <p class="text-2xl font-bold text-green-600">{{ bid.startingPrice|number_format(2, ',', '.') }} ₺</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Bitiş Tarihi</label>
                            <p class="text-lg font-semibold {% if bid.endTime < date() %}text-red-600{% else %}text-green-600{% endif %}">
                                {{ bid.endTime|date('d.m.Y H:i') }}
                            </p>
                            {% if bid.endTime < date() %}
                                <p class="text-sm text-red-500 mt-1">İhale süresi dolmuş</p>
                            {% else %}
                                <p class="text-sm text-gray-500 mt-1">
                                    Kalan süre: {{ bid.endTime.diff(date())|date('%a gün, %h saat, %i dakika') }}
                                </p>
                            {% endif %}
                        </div>
                    </div>

                    {% if bid.description %}
                        <div class="mt-6">
                            <label class="block text-sm font-medium text-gray-700 mb-2">İhale Açıklaması</label>
                            <div class="p-4 bg-gray-50 rounded-lg">
                                <p class="text-gray-700">{{ bid.description|nl2br }}</p>
                            </div>
                        </div>
                    {% endif %}

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6 pt-6 border-t border-gray-200">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Oluşturulma Tarihi</label>
                            <p class="text-gray-900">{{ bid.createdAt|date('d.m.Y H:i') }}</p>
                        </div>
                        
                        {% if bid.updatedAt and bid.updatedAt != bid.createdAt %}
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Son Güncelleme</label>
                                <p class="text-gray-900">{{ bid.updatedAt|date('d.m.Y H:i') }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="lg:col-span-1">
            <div class="bg-white shadow rounded-lg">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">İşlemler</h3>
                </div>
                <div class="p-6 space-y-3">
                    {% if isAdmin %}
                        <!-- Admin işlemleri -->
                        {% if bid.status == 'pending' %}
                            <button onclick="approveBid({{ bid.id }})" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-green-700 bg-green-100 hover:bg-green-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                                İhaleyi Onayla
                            </button>
                            <button onclick="rejectBid({{ bid.id }})" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                                İhaleyi Reddet
                            </button>
                        {% endif %}
                    {% else %}
                        <!-- Normal kullanıcı işlemleri -->
                        {% if bid.status == 'pending' %}
                            <a href="{{ path('app_bids_edit', {'id': bid.id}) }}" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                </svg>
                                İhaleyi Düzenle
                            </a>
                        {% else %}
                            <div class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-500 bg-gray-100 cursor-not-allowed">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                                Düzenleme Kilitli
                            </div>
                        {% endif %}
                    {% endif %}
                    
                    <a href="{{ path('app_bids_index') }}" class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        İhale Listesine Dön
                    </a>
                    <button onclick="deleteBid({{ bid.id }})" class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        İhaleyi Sil
                    </button>
                </div>
            </div>
            
            <div class="bg-white shadow rounded-lg mt-6">
                <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                    <h3 class="text-lg font-medium text-gray-900">Gelen Teklifler</h3>
                    <div class="flex items-center gap-3">
                        <span class="text-sm text-gray-500">{{ offers|length }} adet</span>
                        <a href="{{ path('admin_bid_offers', {id: bid.id}) }}" class="text-indigo-600 hover:text-indigo-900 text-sm">Tümünü Gör</a>
                    </div>
                </div>
                <div class="p-6 space-y-3">
                    {% if offers|length > 0 %}
                        {% for offer in offers %}
                            <div class="p-3 border border-gray-200 rounded-lg">
                                <div class="flex items-center justify-between">
                                    <div class="text-sm text-gray-700">
                                        <span class="font-semibold">{{ offer.bidder.name ?? offer.bidder.email }}</span>
                                        <span class="text-gray-500">• {{ offer.createdAt|date('d.m.Y H:i') }}</span>
                                    </div>
                                    <div class="text-sm font-bold text-gray-900">
                                        {{ offer.currency }} {{ offer.price|number_format(2, ',', '.') }}
                                    </div>
                                </div>
                                <div class="mt-2 text-sm text-gray-600">
                                    {% if offer.contactPhone %}<div>Telefon: {{ offer.contactPhone }}</div>{% endif %}
                                    {% if offer.contactEmail %}<div>E-posta: {{ offer.contactEmail }}</div>{% endif %}
                                </div>
                                {% if offer.message %}
                                    <div class="mt-2 text-sm text-gray-700">{{ offer.message|nl2br }}</div>
                                {% endif %}
                                <div class="mt-3">
                                    <a href="{{ path('admin_bid_offer_messages', {id: offer.id}) }}" class="inline-flex items-center px-3 py-1.5 text-sm rounded-md text-white" style="background:#0a0a0a;">Mesaj Gönder</a>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-sm text-gray-500">Henüz teklif yok.</div>
                    {% endif %}
                </div>
            </div>

            <div class="bg-white shadow rounded-lg mt-6">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">İstatistikler</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-4 text-center">
                        <div>
                            <div class="text-2xl font-bold text-primary-600">0</div>
                            <div class="text-sm text-gray-500">Teklif Sayısı</div>
                        </div>
                        <div>
                            <div class="text-2xl font-bold text-green-600">{{ bid.startingPrice|number_format(0, ',', '.') }}₺</div>
                            <div class="text-sm text-gray-500">Başlangıç Fiyatı</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form -->
<form id="delete-form" method="post" style="display: none;">
    <input type="hidden" name="_token" value="">
</form>

<script>
function deleteBid(bidId) {
    if (confirm('Bu ihale silinecek. Emin misiniz?')) {
        const form = document.getElementById('delete-form');
        form.action = `/admin/bids/${bidId}`;
        form.querySelector('input[name="_token"]').value = '{{ csrf_token('delete') }}';
        form.submit();
    }
}

function approveBid(bidId) {
    if (confirm('Bu ihale onaylanacak. Emin misiniz?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/bids/${bidId}/approve`;
        
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '_token';
        tokenInput.value = '{{ csrf_token('approve') }}';
        
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
    }
}

function rejectBid(bidId) {
    if (confirm('Bu ihale reddedilecek. Emin misiniz?')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/bids/${bidId}/reject`;
        
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '_token';
        tokenInput.value = '{{ csrf_token('reject') }}';
        
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
{% endblock %}
