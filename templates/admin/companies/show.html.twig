{% extends 'admin/base.html.twig' %}

{% block title %}{{ company.name }} - Admin Panel{% endblock %}
{% block page_title %}{{ company.name }} Detayları{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-semibold text-white">{{ company.name }}</h3>
                            <p class="text-blue-100 text-sm">Firma Detayları</p>
                        </div>
                    </div>
                    <div class="flex space-x-3">
                        <a href="{{ path('companies_edit', {'id': company.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Düzenle
                        </a>
                        <a href="{{ path('companies_index') }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sol Kolon - Temel Bilgiler -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Temel Bilgiler -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Temel Bilgiler
                        </h4>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Firma Adı</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.name ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Firma Sahibi</dt>
                                <dd class="mt-1">
                                    {% if company.owner %}
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center mr-3">
                                                <span class="text-xs font-medium text-indigo-600">
                                                    {{ company.owner.name|first|upper }}{{ company.owner.surname|first|upper }}
                                                </span>
                                            </div>
                                            <div>
                                                <div class="text-sm font-medium text-gray-900">{{ company.owner.name }} {{ company.owner.surname }}</div>
                                                <div class="text-sm text-gray-500">{{ company.owner.email }}</div>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-sm text-gray-400">Belirtilmemiş</span>
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Kısa Ad</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.shortName ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Başlık</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.title ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Faaliyet Türü</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.activityType ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Kuruluş Yılı</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.foundedYear ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Ticaret Sicil No</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.tradeRegistryNo ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">MERSİS No</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.mersisNo ?? 'Belirtilmemiş' }}</dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- İletişim Bilgileri -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            İletişim Bilgileri
                        </h4>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Telefon</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.phone ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">E-posta</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ company.email ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Web Sitesi</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    {% if company.website %}
                                        <a href="{{ company.website }}" target="_blank" class="text-blue-600 hover:text-blue-800">{{ company.website }}</a>
                                    {% else %}
                                        Belirtilmemiş
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Google Maps</dt>
                                <dd class="mt-1 text-sm text-gray-900">
                                    {% if company.mapsUrl %}
                                        <a href="{{ company.mapsUrl }}" target="_blank" class="text-blue-600 hover:text-blue-800">Haritada Görüntüle</a>
                                    {% else %}
                                        Belirtilmemiş
                                    {% endif %}
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Açıklama ve Adres -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                            Detay Bilgileri
                        </h4>
                    </div>
                    <div class="p-6 space-y-6">
                        {% if company.about %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-2">Hakkında</dt>
                                <dd class="text-sm text-gray-900">{{ company.about }}</dd>
                            </div>
                        {% endif %}
                        
                        {% if company.adress %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-2">Adres</dt>
                                <dd class="text-sm text-gray-900">{{ company.adress }}</dd>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Sağ Kolon - Logo, Dosyalar ve İstatistikler -->
            <div class="space-y-6">
                <!-- Logo ve Görsel -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Logo ve Görseller
                        </h4>
                    </div>
                    <div class="p-6">
                        {% if company.logoPath %}
                            <div class="mb-4">
                                <img src="/{{ company.logoPath }}" alt="Logo" class="w-32 h-32 object-cover rounded-lg mx-auto">
                            </div>
                        {% else %}
                            <div class="mb-4 text-center text-gray-500">
                                <div class="w-32 h-32 bg-gray-100 rounded-lg flex items-center justify-center mx-auto">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-500 mt-2">Logo yüklenmemiş</p>
                            </div>
                        {% endif %}
                        
                        {% if company.backgroundPhotoPath %}
                            <div>
                                <img src="/{{ company.backgroundPhotoPath }}" alt="Arka Plan" class="w-full h-32 object-cover rounded-lg">
                            </div>
                        {% else %}
                            <div class="text-center text-gray-500">
                                <div class="w-full h-32 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <p class="text-sm text-gray-500 mt-2">Arka plan fotoğrafı yüklenmemiş</p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Dosya Yolları -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                            </svg>
                            Dosyalar
                        </h4>
                    </div>
                    <div class="p-6 space-y-3">
                        {% if company.catalogPath %}
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                                </svg>
                                <a href="/{{ company.catalogPath }}" target="_blank" class="text-sm text-blue-600 hover:text-blue-800">Katalog İndir</a>
                            </div>
                        {% endif %}
                        
                        {% if company.logoPath %}
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <a href="/{{ company.logoPath }}" target="_blank" class="text-sm text-blue-600 hover:text-blue-800">Logo Görüntüle</a>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- İstatistikler -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            İstatistikler
                        </h4>
                    </div>
                    <div class="p-6">
                        <div class="text-center">
                            <div class="text-3xl font-bold text-blue-600">{{ company.products|length }}</div>
                            <div class="text-sm text-gray-500">Toplam Ürün</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
