{% extends 'admin/base.html.twig' %}

{% block title %}Yeni Ürün - Admin Panel{% endblock %}
{% block page_title %}Yeni Ürün Ekle{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
                <div class="flex items-center">
                    <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-lg font-semibold text-white">Yeni Ürün Bilgileri</h3>
                        <p class="text-purple-100 text-sm">Ürün detaylarını doldurun ve kaydedin</p>
                    </div>
                </div>
            </div>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-8', 'enctype': 'multipart/form-data'}}) }}
                
                <!-- Temel Ürün Bilgileri -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Temel Ürün Bilgileri
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.name, 'Ürün Adı *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ürün adını giriniz'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.brand, 'Marka', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.brand, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Marka adını giriniz'}}) }}
                            {{ form_errors(form.brand, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.modelType, 'Model/Tip', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.modelType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Model veya tip bilgisi'}}) }}
                            {{ form_errors(form.modelType, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.price, 'Fiyat', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.price, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Örn: 150000.00'}}) }}
                            {{ form_errors(form.price, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>

                        <div class="space-y-2">
                            {{ form_label(form.currency, 'Para Birimi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.currency, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.currency, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
 
                    </div>
                </div>

                <!-- Ürün Detayları -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                        </svg>
                        Ürün Detayları
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.productType, 'Ürün Türü *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.productType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.productType, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünün satılık mı kiralık mı olduğunu belirtin</p>
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.productStatus, 'Ürün Durumu *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.productStatus, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.productStatus, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünün satılık mı kiralık mı olduğunu belirtin</p>
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.origin, 'Menşei', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.origin, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ürün menşei'}}) }}
                            {{ form_errors(form.origin, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        

                    </div>
                </div>

                <!-- İlişkili Bilgiler -->
                <div class="bg-green-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                        </svg>
                        İlişkili Bilgiler
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.company, 'Firma', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.company, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.company, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.category, 'Kategori', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.category, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Açıklama ve Detay -->
                <div class="bg-yellow-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        Açıklama ve Detay
                    </h4>
                    <div class="space-y-6">
                        <div class="space-y-2">
                            {{ form_label(form.description, 'Ürün Açıklaması', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'rows': '3', 'placeholder': 'Ürün hakkında kısa açıklama...'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.detail, 'Detaylı Bilgi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.detail, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'rows': '4', 'placeholder': 'Ürün hakkında detaylı bilgi giriniz...'}}) }}
                            {{ form_errors(form.detail, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Dosya Yüklemeleri -->
                <div class="bg-purple-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Dosya Yüklemeleri
                    </h4>
                    
                    <!-- Fotoğraflar -->
                    <div class="mb-6">
                        <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
                            <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Ürün Fotoğrafları (Max 5 adet, her biri 5MB)
                        </h5>
                        <div class="space-y-2">
                            {{ form_label(form.imageFiles, 'Fotoğrafları Seçin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.imageFiles, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'accept': 'image/*', 'multiple': 'multiple'}}) }}
                            <p class="text-xs text-gray-500">Ctrl+Click ile birden fazla fotoğraf seçebilirsiniz</p>
                            {% if form.imageFiles.vars.errors|length > 0 %}
                                <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-lg">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <div class="text-sm text-red-700">
                                            {{ form_errors(form.imageFiles) }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <p class="text-xs text-gray-500 mt-2">Desteklenen formatlar: JPEG, PNG, GIF, WebP</p>
                    </div>
                    
                    <!-- Videolar -->
                    <div>
                        <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
                            <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                            </svg>
                            Ürün Videoları (Max 3 adet, her biri 25MB)
                        </h5>
                        <div class="space-y-2">
                            {{ form_label(form.videoFiles, 'Videoları Seçin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.videoFiles, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'accept': 'video/*', 'multiple': 'multiple'}}) }}
                            <p class="text-xs text-gray-500">Ctrl+Click ile birden fazla video seçebilirsiniz</p>
                            {% if form.videoFiles.vars.errors|length > 0 %}
                                <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-lg">
                                    <div class="flex items-center">
                                        <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                        </svg>
                                        <div class="text-sm text-red-700">
                                            {{ form_errors(form.videoFiles) }}
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <p class="text-xs text-gray-500 mt-2">Desteklenen formatlar: MP4, AVI, MOV, WMV, FLV</p>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('products_index') }}" 
                       class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        İptal
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-purple-700 border border-transparent rounded-lg font-medium text-white hover:from-purple-700 hover:to-purple-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all transform hover:scale-105">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Ürün Ekle
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
