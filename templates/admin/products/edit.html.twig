{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.name }} Düzenle - Admin Panel{% endblock %}
{% block page_title %}{{ product.name }} Düzenle{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-semibold text-white">{{ product.name }} Düzenle</h3>
                            <p class="text-purple-100 text-sm">Ürün bilgilerini güncelleyin</p>
                        </div>
                    </div>
                    <div class="flex space-x-3">
                        <a href="{{ path('products_show', {'id': product.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            Görüntüle
                        </a>
                        <a href="{{ path('products_index') }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                
                <!-- Temel Ürün Bilgileri -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Temel Ürün Bilgileri
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.name, 'Ürün Adı *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ürün adını giriniz'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.brand, 'Marka', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.brand, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Marka adını giriniz'}}) }}
                            {{ form_errors(form.brand, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.modelType, 'Model', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.modelType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Model adını giriniz'}}) }}
                            {{ form_errors(form.modelType, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.type, 'Ürün Tipi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ürün tipini giriniz'}}) }}
                            {{ form_errors(form.type, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.origin, 'Menşei', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.origin, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ülke/şehir giriniz'}}) }}
                            {{ form_errors(form.origin, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- İlişkili Bilgiler -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        İlişkili Bilgiler
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.company, 'Firma', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.company, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                            {{ form_errors(form.company, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünü üreten/satan firma</p>
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.category, 'Kategori', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                            {{ form_errors(form.category, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünün ait olduğu kategori</p>
                        </div>
                    </div>
                </div>

                <!-- Açıklama ve Detay -->
                <div class="bg-green-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        Açıklama ve Detay
                    </h4>
                    <div class="space-y-6">
                        <div class="space-y-2">
                            {{ form_label(form.description, 'Ürün Açıklaması', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors', 'rows': '4', 'placeholder': 'Ürün hakkında genel açıklama giriniz...'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.detail, 'Teknik Detaylar', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.detail, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors', 'rows': '4', 'placeholder': 'Teknik özellikler, boyutlar, ağırlık vb...'}}) }}
                            {{ form_errors(form.detail, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Durum Ayarları -->
                <div class="bg-indigo-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Durum Ayarları
                    </h4>
                    <div class="space-y-2">
                        <div class="flex items-center">
                            {{ form_widget(form.status, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                            {{ form_label(form.status, 'Ürün Aktif', {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                        </div>
                        {{ form_errors(form.status, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        <p class="text-xs text-gray-500">Pasif ürünler listelerde görünmez</p>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('products_show', {'id': product.id}) }}" 
                       class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        İptal
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-purple-700 border border-transparent rounded-lg font-medium text-white hover:from-purple-700 hover:to-purple-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all transform hover:scale-105">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Güncelle
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
