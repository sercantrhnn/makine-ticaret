{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.name }} Düzenle - Admin Panel{% endblock %}
{% block page_title %}{{ product.name }} Düzenle{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-purple-600 to-purple-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-semibold text-white">{{ product.name }} Düzenle</h3>
                            <p class="text-purple-100 text-sm">Ürün bilgilerini güncelleyin</p>
                        </div>
                    </div>
                    <div class="flex space-x-3">
                        <a href="{{ path('products_show', {'id': product.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                            </svg>
                            Görüntüle
                        </a>
                        <a href="{{ path('products_index') }}" 
                           class="inline-flex items-center px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 border border-white border-opacity-30 rounded-lg font-medium text-white transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'id': 'product-edit-form', 'class': 'space-y-8', 'enctype': 'multipart/form-data'}}) }}
                
                <!-- Temel Ürün Bilgileri -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Temel Ürün Bilgileri
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.name, 'Ürün Adı *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ürün adını giriniz'}}) }}
                            {{ form_errors(form.name, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.brand, 'Marka', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.brand, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Marka adını giriniz'}}) }}
                            {{ form_errors(form.brand, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.modelType, 'Model', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.modelType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Model adını giriniz'}}) }}
                            {{ form_errors(form.modelType, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.price, 'Fiyat', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.price, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Örn: 150000.00'}}) }}
                            {{ form_errors(form.price, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>

                        <div class="space-y-2">
                            {{ form_label(form.currency, 'Para Birimi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.currency, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors'}}) }}
                            {{ form_errors(form.currency, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
 
                        
                        <div class="space-y-2">
                            {{ form_label(form.origin, 'Menşei', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.origin, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'placeholder': 'Ülke/şehir giriniz'}}) }}
                            {{ form_errors(form.origin, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- İlişkili Bilgiler -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        İlişkili Bilgiler
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.company, 'Firma', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.company, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                            {{ form_errors(form.company, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünü üreten/satan firma</p>
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.category, 'Kategori', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors'}}) }}
                            {{ form_errors(form.category, {'attr': {'class': 'text-sm text-red-600'}}) }}
                            <p class="text-xs text-gray-500">Ürünün ait olduğu kategori</p>
                        </div>
                    </div>
                </div>

                <!-- Açıklama ve Detay -->
                <div class="bg-green-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        Açıklama ve Detay
                    </h4>
                    <div class="space-y-6">
                        <div class="space-y-2">
                            {{ form_label(form.description, 'Ürün Açıklaması', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors', 'rows': '4', 'placeholder': 'Ürün hakkında genel açıklama giriniz...'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.detail, 'Teknik Detaylar', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.detail, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors', 'rows': '4', 'placeholder': 'Teknik özellikler, boyutlar, ağırlık vb...'}}) }}
                            {{ form_errors(form.detail, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Ürün Durumu -->
                <div class="bg-indigo-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Ürün Durumu
                    </h4>
                    <div class="space-y-2">
                        {{ form_label(form.productStatus, 'Ürün Durumu *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.productStatus, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                        {{ form_errors(form.productStatus, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        <p class="text-xs text-gray-500">Ürünün satılık mı kiralık mı olduğunu belirtin</p>
                    </div>
                </div>

                <!-- Ürün Türü -->
                <div class="bg-yellow-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Ürün Türü
                    </h4>
                    <div class="space-y-2">
                        {{ form_label(form.productType, 'Ürün Türü *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.productType, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:border-yellow-500 transition-colors'}}) }}
                        {{ form_errors(form.productType, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        <p class="text-xs text-gray-500">Ürünün sıfır mı ikinci el mi olduğunu belirtin</p>
                    </div>
                </div>

                {# Mevcut Dosyalar - Dosya Yüklemeleri bölümünün hemen üstünde, ana form içinde ayrı submit butonları ile #}
                {% if product.images|length > 0 or product.videos|length > 0 %}
                    <div class="bg-white rounded-lg p-6 border border-purple-200">
                        <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
                            <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Mevcut Dosyalar
                        </h5>
                        <div class="space-y-3">
                            {% if product.images|length > 0 %}
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
                                    {% for image in product.images %}
                                        <div class="flex items-center p-3 bg-gray-50 rounded-lg border border-gray-200">
                                            <img src="{{ asset(image.imagePath) }}" alt="{{ image.altText ?? (product.name ~ ' görseli') }}" class="w-16 h-16 object-cover rounded mr-3 border border-gray-200">
                                            <div class="flex-1 min-w-0">
                                                <p class="text-xs text-gray-500 truncate" title="{{ image.imagePath|split('/')|last }}">
                                                    {{ image.imagePath|split('/')|last|slice(0, 15) }}{% if (image.imagePath|split('/')|last|length) > 15 %}...{% endif %}
                                                </p>
                                            </div>
                                            <div class="ml-3">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_image_' ~ image.id) }}">
                                                <button formaction="{{ path('product_images_delete', {'id': image.id}) }}"
                                                        formmethod="post"
                                                        formnovalidate
                                                        onclick="return confirm('Bu fotoğrafı silmek istediğinize emin misiniz?');"
                                                        class="inline-flex items-center px-2 py-1 text-xs text-red-700 bg-red-50 border border-red-200 rounded hover:bg-red-100"
                                                        title="Sil">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7h6m2 0H7m1-3h8a2 2 0 012 2v1H6V6a2 2 0 012-2z" />
                                                    </svg>
                                                    Sil
                                                </button>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                            {% if product.videos|length > 0 %}
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                                    {% for video in product.videos %}
                                        <div class="flex items-center p-3 bg-gray-50 rounded-lg border border-gray-200">
                                            <div class="flex-shrink-0 w-8 h-8 bg-red-100 rounded-lg flex items-center justify-center mr-3">
                                                <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                            <div class="flex-1 min-w-0">
                                                <p class="text-xs text-gray-500 truncate" title="{{ video.videoPath|split('/')|last }}">
                                                    {{ video.videoPath|split('/')|last|slice(0, 15) }}{% if (video.videoPath|split('/')|last|length) > 15 %}...{% endif %}
                                                </p>
                                            </div>
                                            <div class="ml-3">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_video_' ~ video.id) }}">
                                                <button formaction="{{ path('product_videos_delete', {'id': video.id}) }}"
                                                        formmethod="post"
                                                        formnovalidate
                                                        onclick="return confirm('Bu videoyu silmek istediğinize emin misiniz?');"
                                                        class="inline-flex items-center px-2 py-1 text-xs text-red-700 bg-red-50 border border-red-200 rounded hover:bg-red-100"
                                                        title="Sil">
                                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 7h6m2 0H7m1-3h8a2 2 0 012 2v1H6V6a2 2 0 012-2z" />
                                                    </svg>
                                                    Sil
                                                </button>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                <!-- Dosya Yüklemeleri -->
                <div class="bg-purple-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                        </svg>
                        Dosya Yüklemeleri
                    </h4>
                    
                    
                    
                    <!-- Yeni Dosya Yüklemeleri -->
                    <div class="space-y-6">
                        <!-- Fotoğraflar -->
                        <div>
                            <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
                                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                Yeni Fotoğraflar Ekle (Max 10 adet, her biri 5MB)
                            </h5>
                            <div class="space-y-2">
                                {{ form_label(form.imageFiles, 'Fotoğrafları Seçin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.imageFiles, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'accept': 'image/*', 'multiple': 'multiple'}}) }}
                                <p class="text-xs text-gray-500">Ctrl+Click ile birden fazla fotoğraf seçebilirsiniz</p>
                                {% if form.imageFiles.vars.errors|length > 0 %}
                                    <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-lg">
                                        <div class="flex items-center">
                                            <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <div class="text-sm text-red-700">
                                                {{ form_errors(form.imageFiles) }}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Desteklenen formatlar: JPEG, PNG, GIF, WebP</p>
                        </div>
                        
                        <!-- Videolar -->
                        <div>
                            <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
                                <svg class="w-4 h-4 text-purple-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                </svg>
                                Yeni Videolar Ekle (Max 3 adet, her biri 25MB)
                            </h5>
                            <div class="space-y-2">
                                {{ form_label(form.videoFiles, 'Videoları Seçin', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.videoFiles, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors', 'accept': 'video/*', 'multiple': 'multiple'}}) }}
                                <p class="text-xs text-gray-500">Ctrl+Click ile birden fazla video seçebilirsiniz</p>
                                {% if form.imageFiles.vars.errors|length > 0 %}
                                    <div class="mt-2 p-3 bg-red-50 border border-red-200 rounded-lg">
                                        <div class="flex items-center">
                                            <svg class="w-5 h-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <div class="text-sm text-red-700">
                                                {{ form_errors(form.videoFiles) }}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            <p class="text-xs text-gray-500 mt-2">Desteklenen formatlar: MP4, AVI, MOV, WMV, FLV</p>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('products_show', {'id': product.id}) }}" 
                       class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        İptal
                    </a>
                    <button type="submit" 
