{% extends 'admin/base.html.twig' %}

{% block title %}Gelen Teklifler - İhale #{{ bid.id }}{% endblock %}
{% block page_title %}Gelen Teklifler - İhale #{{ bid.id }}{% endblock %}

{% block body %}
<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Gelen Teklifler</h1>
      <p class="text-sm text-gray-500">İhale: {{ bid.product.name }} ({{ bid.company.name }})</p>
    </div>
    <a href="{{ path('app_bids_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">İhalelere Dön</a>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teklif Tarihi</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teklif Sahibi</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fiyat</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İletişim</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlemler</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {% for offer in offers %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ offer.createdAt|date('d.m.Y H:i') }}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ offer.bidder.name ?? offer.bidder.email }}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">{{ offer.currency }} {{ offer.price|number_format(2, ',', '.') }}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
              {% if offer.contactPhone %}<div>{{ offer.contactPhone }}</div>{% endif %}
              {% if offer.contactEmail %}<div>{{ offer.contactEmail }}</div>{% endif %}
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex items-center gap-2">
                <a href="{{ path('admin_bid_offer_show', {id: bid.id, offerId: offer.id}) }}" class="text-indigo-600 hover:text-indigo-900">Görüntüle</a>
                <a href="{{ path('admin_bid_offer_messages', {id: offer.id}) }}" class="text-gray-700 hover:text-gray-900">Mesaj Gönder</a>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="6" class="px-6 py-8 text-center text-gray-500 text-sm">Henüz teklif yok.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}


