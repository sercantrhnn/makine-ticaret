{% extends 'admin/base.html.twig' %}

{% block title %}Abonelik Detayları - Admin Panel{% endblock %}
{% block page_title %}Abonelik Detayları{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-6">
            <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-semibold text-white">Abonelik Detayları</h3>
                            <p class="text-indigo-100 text-sm">Abonelik #{{ subscription.id }}</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        <a href="{{ path('subscriptions_index') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Geri Dön
                        </a>
                        <a href="{{ path('subscriptions_edit', {'id': subscription.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Düzenle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Sol Kolon - Temel Bilgiler -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Kullanıcı Bilgileri -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Kullanıcı Bilgileri
                        </h4>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center">
                                <span class="text-xl font-medium text-indigo-600">
                                    {{ subscription.user.name|first|upper }}{{ subscription.user.surname|first|upper }}
                                </span>
                            </div>
                            <div class="flex-1">
                                <h5 class="text-lg font-medium text-gray-900">{{ subscription.user.name }} {{ subscription.user.surname }}</h5>
                                <p class="text-sm text-gray-500">{{ subscription.user.email }}</p>
                                <p class="text-sm text-gray-500">{{ subscription.user.phone ?? 'Telefon belirtilmemiş' }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Abonelik Detayları -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                            Abonelik Detayları
                        </h4>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Abonelik Tipi</dt>
                                <dd class="mt-1">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if subscription.type == 'monthly' %}bg-blue-100 text-blue-800
                                        {% elseif subscription.type == 'yearly' %}bg-green-100 text-green-800
                                        {% elseif subscription.type == 'lifetime' %}bg-purple-100 text-purple-800
                                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ subscription.getTypeLabel() }}
                                    </span>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Durum</dt>
                                <dd class="mt-1">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if subscription.status == 'active' %}bg-green-100 text-green-800
                                        {% elseif subscription.status == 'expired' %}bg-red-100 text-red-800
                                        {% elseif subscription.status == 'cancelled' %}bg-gray-100 text-gray-800
                                        {% elseif subscription.status == 'pending' %}bg-yellow-100 text-yellow-800
                                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ subscription.getStatusLabel() }}
                                    </span>
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Başlangıç Tarihi</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.startDate|date('d.m.Y H:i') }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Bitiş Tarihi</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.endDate|date('d.m.Y H:i') }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Fiyat</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.price }} {{ subscription.currency }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Otomatik Yenileme</dt>
                                <dd class="mt-1">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                        {% if subscription.autoRenew %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ subscription.autoRenew ? 'Aktif' : 'Pasif' }}
                                    </span>
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Ödeme Bilgileri -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                            </svg>
                            Ödeme Bilgileri
                        </h4>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Ödeme Yöntemi</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.paymentMethod ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500">İşlem ID</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.transactionId ?? 'Belirtilmemiş' }}</dd>
                            </div>
                            <div class="md:col-span-2">
                                <dt class="text-sm font-medium text-gray-500">Açıklama</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.description ?? 'Açıklama yok' }}</dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Abonelik Özellikleri -->
                {% if subscription.features %}
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                            Abonelik Özellikleri
                        </h4>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span class="text-sm font-medium text-gray-700">{{ subscription.getFeaturesLabel() }}</span>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Sağ Kolon - İşlemler ve Bilgiler -->
            <div class="space-y-6">
                <!-- Hızlı İşlemler -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            Hızlı İşlemler
                        </h4>
                    </div>
                    <div class="p-6 space-y-3">
                        {% if subscription.status == 'active' %}
                            <form method="post" action="{{ path('subscriptions_cancel', {'id': subscription.id}) }}" class="inline-block w-full">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    Aboneliği İptal Et
                                </button>
                            </form>
                        {% elseif subscription.status == 'cancelled' %}
                            <form method="post" action="{{ path('subscriptions_activate', {'id': subscription.id}) }}" class="inline-block w-full">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                    Aboneliği Aktif Et
                                </button>
                            </form>
                        {% endif %}
                        
                        <a href="{{ path('subscriptions_edit', {'id': subscription.id}) }}" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                            Düzenle
                        </a>
                    </div>
                </div>

                <!-- Abonelik Durumu -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
                    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            Durum Bilgileri
                        </h4>
                    </div>
                    <div class="p-6">
                        <div class="space-y-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Kalan Gün</dt>
                                <dd class="mt-1 text-2xl font-bold text-gray-900">{{ subscription.getDaysRemaining() }}</dd>
                            </div>
                            
                            {% if subscription.lastRenewalDate %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Son Yenileme</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.lastRenewalDate|date('d.m.Y H:i') }}</dd>
                            </div>
                            {% endif %}
                            
                            {% if subscription.nextRenewalDate %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Sonraki Yenileme</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.nextRenewalDate|date('d.m.Y H:i') }}</dd>
                            </div>
                            {% endif %}
                            
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Oluşturulma Tarihi</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.createdAt|date('d.m.Y H:i') }}</dd>
                            </div>
                            
                            {% if subscription.updatedAt %}
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Son Güncelleme</dt>
                                <dd class="mt-1 text-sm text-gray-900">{{ subscription.updatedAt|date('d.m.Y H:i') }}</dd>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}