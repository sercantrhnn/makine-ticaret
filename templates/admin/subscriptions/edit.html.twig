{% extends 'admin/base.html.twig' %}

{% block title %}Abonelik Düzenle - Admin Panel{% endblock %}
{% block page_title %}Abonelik Düzenle{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="p-2 bg-white bg-opacity-20 rounded-lg">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-lg font-semibold text-white">Abonelik Düzenle</h3>
                            <p class="text-indigo-100 text-sm">Abonelik #{{ subscription.id }} - {{ subscription.user.name }} {{ subscription.user.surname }}</p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-3">
                        <a href="{{ path('subscriptions_show', {'id': subscription.id}) }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Geri Dön
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="p-6">
                {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}
                
                <!-- Temel Bilgiler -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Temel Bilgiler
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.user, 'Kullanıcı *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.user, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.user, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.type, 'Abonelik Tipi *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.type, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.status, 'Durum *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.status, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.price, 'Fiyat *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.price, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.price, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Tarih Bilgileri -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Tarih Bilgileri
                    </h4>
                    <div class="grid grid-cols-1 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.startDate, 'Başlangıç Tarihi *', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <p class="text-xs text-gray-500">Bitiş tarihi abonelik tipine göre otomatik hesaplanacak</p>
                            {{ form_widget(form.startDate, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.startDate, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="bg-blue-100 border border-blue-200 rounded-lg p-4">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div>
                                    <h5 class="text-sm font-medium text-blue-800">Mevcut Bitiş Tarihi</h5>
                                    <p class="text-sm text-blue-600">{{ subscription.endDate|date('d.m.Y H:i') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ödeme Bilgileri -->
                <div class="bg-green-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                        </svg>
                        Ödeme Bilgileri
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div class="space-y-2">
                            {{ form_label(form.currency, 'Para Birimi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.currency, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.currency, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.paymentMethod, 'Ödeme Yöntemi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.paymentMethod, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.paymentMethod, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="space-y-2">
                            {{ form_label(form.transactionId, 'İşlem ID', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            {{ form_widget(form.transactionId, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                            {{ form_errors(form.transactionId, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Abonelik Özellikleri -->
                <div class="bg-purple-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                        </svg>
                        Abonelik Özellikleri
                    </h4>
                    <div class="space-y-4">
                        <div class="space-y-2">
                            {{ form_label(form.features, 'Özellik Tipi', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                            <p class="text-xs text-gray-500">Bu aboneliğin özellik tipini seçin</p>
                            <div class="mt-2 space-y-2">
                                {{ form_widget(form.features, {'attr': {'class': 'space-y-2'}}) }}
                            </div>
                            {{ form_errors(form.features, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                        
                        <div class="flex items-center">
                            {{ form_widget(form.autoRenew, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                            {{ form_label(form.autoRenew, 'Otomatik Yenileme', {'label_attr': {'class': 'ml-2 block text-sm text-gray-700'}}) }}
                            {{ form_errors(form.autoRenew, {'attr': {'class': 'text-sm text-red-600'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Açıklama -->
                <div class="bg-yellow-50 rounded-lg p-6">
                    <h4 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                        </svg>
                        Açıklama
                    </h4>
                    <div class="space-y-2">
                        {{ form_label(form.description, 'Açıklama', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors'}}) }}
                        {{ form_errors(form.description, {'attr': {'class': 'text-sm text-red-600'}}) }}
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('subscriptions_show', {'id': subscription.id}) }}" 
                       class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        İptal
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Güncelle
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}