{% extends 'admin/base.html.twig' %}

{% block title %}Mesajlarım{% endblock %}
{% block page_title %}Mesajlarım{% endblock %}

{% block body %}
<div class="space-y-6">
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İhale / Ürün</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Teklif Sahibi</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fiyat</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Son Güncelleme</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlemler</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {% for offer in offers %}
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 text-sm text-gray-900">#{{ offer.bid.id }} — {{ offer.product.name }}</td>
            <td class="px-6 py-4 text-sm text-gray-700">{{ offer.bidder.name ?? offer.bidder.email }}</td>
            <td class="px-6 py-4 text-sm font-semibold text-gray-900">{{ offer.currency }} {{ offer.price|number_format(2, ',', '.') }}</td>
            <td class="px-6 py-4 text-sm text-gray-700">{{ offer.updatedAt|date('d.m.Y H:i') }}</td>
            <td class="px-6 py-4 text-sm font-medium">
              <a href="{{ path('admin_bid_offer_messages', {id: offer.id}) }}" class="text-indigo-600 hover:text-indigo-900">Görüntüle / Mesaj Gönder</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500">Henüz bir konuşma yok.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}


