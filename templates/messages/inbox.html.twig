{% extends 'public/base.html.twig' %}

{% block title %}{{ 'Mesajlarım'|auto_translate(app.request.locale) }} | Makine Ticaret{% endblock %}

{% block header %}
<header style="position:sticky;top:0;z-index:60;background:#0a0a0a;border-bottom:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:10px 16px;display:flex;align-items:center;justify-content:space-between;color:#fff;">
    <a href="{{ path('public_home') }}" style="display:flex;align-items:center;text-decoration:none;color:#fff;">
      <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:44px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
    </a>
  </div>
</header>
{% endblock %}

{% block body %}
<div style="min-height: calc(100vh - 120px);">
<section class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8" style="max-width:80%;padding-left:16px;padding-right:16px;">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">{{ 'Mesajlarım'|auto_translate(app.request.locale) }}</h1>

    {# İhale Teklifleri #}
    {% if offers|length > 0 %}
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">{{ 'İhale Teklifleri'|auto_translate(app.request.locale) }}</h2>
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'İhale / Ürün'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Taraf'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Teklif'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Son Güncelleme'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'İşlem'|auto_translate(app.request.locale) }}</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for offer in offers %}
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900">#{{ offer.bid.id }} — {{ offer.product|smart_translate('name', app.request.locale) }}</td>
                <td class="px-6 py-4 text-sm text-gray-700">{{ offer.owner == app.user ? (offer.bidder.name ?? offer.bidder.email) : (offer.owner.name ?? offer.owner.email) }}</td>
                <td class="px-6 py-4 text-sm text-gray-900">{{ offer.currency }} {{ offer.price|number_format(2, ',', '.') }}</td>
                <td class="px-6 py-4 text-sm text-gray-700">{{ offer.updatedAt|date('d.m.Y H:i') }}</td>
                <td class="px-6 py-4 text-sm font-medium">
                  <a href="{{ path('user_messages_thread', {id: offer.id}) }}" class="text-indigo-600 hover:text-indigo-900">{{ 'Görüntüle'|auto_translate(app.request.locale) }}</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    {% endif %}

    {# Alım Talepleri #}
    {% if purchaseRequests|length > 0 %}
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">{{ 'Alım Talepleri'|auto_translate(app.request.locale) }}</h2>
      <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Ürün Adı'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Açıklama'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'Tarih'|auto_translate(app.request.locale) }}</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">{{ 'İşlem'|auto_translate(app.request.locale) }}</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {% for pr in purchaseRequests %}
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm font-medium text-gray-900">{{ pr|smart_translate('productName', app.request.locale) }}</td>
                <td class="px-6 py-4 text-sm text-gray-700 max-w-xs">
                  <div class="line-clamp-2">{{ pr|smart_translate('description', app.request.locale)|default(('Açıklama yok'|auto_translate(app.request.locale))) }}</div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-700">{{ pr.date|date('d.m.Y H:i') }}</td>
                <td class="px-6 py-4 text-sm font-medium">
                  <a href="{{ path('user_purchase_request_thread', {id: pr.id}) }}" class="text-indigo-600 hover:text-indigo-900">{{ 'Görüntüle'|auto_translate(app.request.locale) }}</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    {% endif %}

    {# Hiç mesaj yoksa #}
    {% if offers|length == 0 and purchaseRequests|length == 0 %}
    <div class="bg-white rounded-lg border border-gray-200 p-8 text-center">
      <p class="text-gray-500">{{ 'Henüz bir mesajınız yok.'|auto_translate(app.request.locale) }}</p>
    </div>
    {% endif %}
  </div>
</section>
</div>
{% endblock %}

{% block footer %}
<footer style="background:#0a0a0a;color:#bdbdbd;border-top:1px solid #1a1a1a;">
  <div style="max-width:80%;margin:0 auto;padding:28px 16px;display:flex;align-items:center;justify-content:space-between;gap:16px;">
    <div style="display:flex;align-items:center;gap:10px;">
      <a href="{{ path('public_home') }}" style="display:inline-flex;align-items:center;">
        <img src="{{ asset('mineindustries_logo_transparent_pad8.png') }}" alt="Makine Ticaret" style="height:46px;width:auto;border-radius:6px;object-fit:contain;display:block;"/>
      </a>
      <span style="color:#6b6b6b;">© {{ "now"|date("Y") }}</span>
    </div>
    <nav style="display:flex;gap:18px;align-items:center;font-size:13px;">
      <a href="{{ path('public_products') }}" style="color:#bdbdbd;text-decoration:none;">{{ 'Ürünler'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_categories') }}" style="color:#bdbdbd;text-decoration:none;">{{ 'Kategoriler'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_companies') }}" style="color:#bdbdbd;text-decoration:none;">{{ 'Firmalar'|auto_translate(app.request.locale) }}</a>
      <a href="{{ path('public_bids') }}" style="color:#bdbdbd;text-decoration:none;">{{ 'İhaleler'|auto_translate(app.request.locale) }}</a>
    </nav>
  </div>
</footer>
{% endblock %}


